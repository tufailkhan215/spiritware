{% paginate blog.articles by 12 %}
  <div class="blog-page page-width">
    <header class="blog-header text-center" style="padding-top: 4rem; padding-bottom: 2rem;">
      <h1 class="blog-title">{{ blog.title }}</h1>
      {% if blog.articles_count > 0 and blog.articles.first.content != blank %}
        <div class="blog-description rte">{{ blog.articles.first.content }}</div>
      {% endif %}
    </header>

    <div class="blog-grid" style="display: grid; gap: 2rem; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));">
      {% for article in paginate.articles %}
        <article class="blog-post-card">
          <a href="{{ article.url }}" class="blog-post-card__link">
            {% if article.image %}
              <div class="blog-post-card__image-wrapper">
                <img
                  src="{{ article.image | image_url: width: 600 }}"
                  alt="{{ article.image.alt | default: article.title | escape }}"
                  width="600"
                  height="{{ 600 | divided_by: article.image.aspect_ratio | round }}"
                  loading="lazy"
                  class="blog-post-card__image"
                />
                <span class="blog-post-card__date">{{ article.published_at | date: format: 'month_day_year' }}</span>
              </div>
            {% endif %}
            <div class="blog-post-card__content">
              {% if article.tags.size > 0 %}
                <span class="blog-post-card__tags">{{ article.tags | join: ', ' }}</span>
              {% endif %}
              <h2 class="blog-post-card__title">{{ article.title }}</h2>
              {% if article.excerpt != blank %}
                <p class="blog-post-card__excerpt">{{ article.excerpt | strip_html | truncate: 120 }}</p>
              {% endif %}
              <span class="blog-post-card__read-more">{{ 'blogs.article.read_more' | t }}</span>
            </div>
          </a>
        </article>
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      {% render 'pagination', paginate: paginate %}
    {% endif %}
  </div>
{% endpaginate %}
