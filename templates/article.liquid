<article class="article-page page-width" style="padding: 4rem 0;">
  {% if article.image %}
    <div class="article__featured-image" style="margin-bottom: 2rem; border-radius: 1rem; overflow: hidden;">
      <img
        src="{{ article.image | image_url: width: 1200 }}"
        alt="{{ article.image.alt | default: article.title | escape }}"
        width="1200"
        loading="eager"
      />
    </div>
  {% endif %}

  {% if article.tags.size > 0 %}
    <div class="article__tags" style="margin-bottom: 1rem;">
      {% for tag in article.tags %}
        <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__tag">{{ tag }}</a>
        {% unless forloop.last %} · {% endunless %}
      {% endfor %}
    </div>
  {% endif %}

  <h1 class="article__title">{{ article.title }}</h1>
  <div class="article__meta" style="margin-bottom: 2rem; color: var(--color-dark-gray); font-size: 0.9em;">
    {{ article.published_at | date: format: 'month_day_year' }}
    {% if article.author != blank %} · {{ article.author }}{% endif %}
  </div>

  <div class="article__content rte">
    {{ article.content }}
  </div>

  {% if article.tags.size > 0 %}
    <footer class="article__footer" style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid var(--color-light-gray);">
      <span class="article__footer-label">{{ 'blogs.article.tags' | t }}:</span>
      {% for tag in article.tags %}
        <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>
        {% unless forloop.last %}, {% endunless %}
      {% endfor %}
    </footer>
  {% endif %}

  <nav class="article__prev-next" style="margin-top: 3rem; display: flex; justify-content: space-between; gap: 1rem;">
    {% if blog.previous_article %}
      <a href="{{ blog.previous_article.url }}" class="article__nav-link">{{ 'blogs.article.older_post' | t }}</a>
    {% else %}
      <span></span>
    {% endif %}
    {% if blog.next_article %}
      <a href="{{ blog.next_article.url }}" class="article__nav-link">{{ 'blogs.article.newer_post' | t }}</a>
    {% else %}
      <span></span>
    {% endif %}
  </nav>
</article>
