{% comment %}
  Customer Account Dashboard Template
{% endcomment %}

<div class="customer-account-page">
  <div class="customer-account-container">
    <h1 class="customer-page-title">My Account</h1>
    
    <div class="customer-account-nav">
      <a href="{{ routes.account_url }}" class="account-nav-link{% if request.path == routes.account_url %} active{% endif %}">Orders</a>
      <a href="{{ routes.account_addresses_url }}" class="account-nav-link{% if request.path == routes.account_addresses_url %} active{% endif %}">Addresses</a>
      <a href="{{ routes.account_logout_url }}" class="account-nav-link">Logout</a>
    </div>
    
    <div class="customer-account-content">
      <div class="customer-account-section">
        <h2 class="account-section-title">Order History</h2>
        
        {% if customer.orders.size > 0 %}
          <div class="customer-orders-table">
            <table class="orders-table">
              <thead>
                <tr>
                  <th>Order</th>
                  <th>Date</th>
                  <th>Payment Status</th>
                  <th>Fulfillment Status</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                {% for order in customer.orders %}
                  <tr>
                    <td>
                      <a href="{{ order.customer_url }}" class="order-link">{{ order.name }}</a>
                    </td>
                    <td>{{ order.created_at | date: '%B %d, %Y' }}</td>
                    <td>
                      <span class="order-status order-status-{{ order.financial_status }}">{{ order.financial_status_label }}</span>
                    </td>
                    <td>
                      <span class="order-status order-status-{{ order.fulfillment_status }}">{{ order.fulfillment_status_label }}</span>
                    </td>
                    <td>{{ order.total_price | money }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <div class="customer-empty-state">
            <p>You haven't placed any orders yet.</p>
            <a href="{{ routes.collections_url }}" class="btn btn-primary">Start Shopping</a>
          </div>
        {% endif %}
      </div>
      
      <div class="customer-account-section">
        <h2 class="account-section-title">Account Details</h2>
        <div class="account-details">
          <p><strong>Name:</strong> {{ customer.name }}</p>
          <p><strong>Email:</strong> {{ customer.email }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
