<div class="customer-page page-width" style="padding: 4rem 0; max-width: 40rem; margin: 0 auto;">
  <h1 class="customer-page__title">{{ 'customer.login.title' | t }}</h1>

  {% form 'customer_login', class: 'customer-form' %}
    {% if form.errors %}
      <div class="form-message form-message--error" role="alert">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}

    <div class="customer-form__field">
      <label for="CustomerEmail">{{ 'customer.login.email' | t }}</label>
      <input type="email" name="customer[email]" id="CustomerEmail" autocomplete="email" required>
    </div>

    <div class="customer-form__field">
      <label for="CustomerPassword">{{ 'customer.login.password' | t }}</label>
      <input type="password" name="customer[password]" id="CustomerPassword" autocomplete="current-password" required>
    </div>

    <a href="{{ routes.account_recover_url }}" class="customer-form__link">{{ 'customer.login.forgot_password' | t }}</a>

    <button type="submit" class="button button--primary">{{ 'customer.login.sign_in' | t }}</button>
  {% endform %}

  <p class="customer-page__register-link" style="margin-top: 2rem;">
    {{ 'customer.login.new_customer' | t }}
    <a href="{{ routes.account_register_url }}">{{ 'customer.login.create_account' | t }}</a>
  </p>
</div>
