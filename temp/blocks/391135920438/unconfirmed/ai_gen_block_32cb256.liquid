{% doc %}
  @prompt
    image full width, i need to be able to change mobile size
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-full-width-image-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
  }

  .ai-full-width-image__wrapper-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
  }

  .ai-full-width-image__img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-full-width-image__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-full-width-image__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-height: 600px;
  }

  .ai-full-width-image__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-full-width-image__img-{{ ai_gen_id }} {
      max-height: {{ block.settings.mobile_max_height }}px;
      object-fit: cover;
    }

    .ai-full-width-image__placeholder-{{ ai_gen_id }} svg {
      max-height: {{ block.settings.mobile_max_height }}px;
    }
  }
{% endstyle %}

<div class="ai-full-width-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-full-width-image__wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-full-width-image__img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-full-width-image__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-full-width-image__empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Full width image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Mobile settings"
    },
    {
      "type": "range",
      "id": "mobile_max_height",
      "label": "Mobile max height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 400,
      "info": "Maximum height of the image on mobile devices"
    }
  ],
  "presets": [
    {
      "name": "Full width image"
    }
  ]
}
{% endschema %}
