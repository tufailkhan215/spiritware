{% doc %}
  @prompt
    image full width
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-full-width-image-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .ai-full-width-image__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-full-width-image__img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-full-width-image__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-full-width-image__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 400px;
  }

  .ai-full-width-image__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  {% if block.settings.enable_height_control %}
    .ai-full-width-image__wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height }}px;
    }

    .ai-full-width-image__img-{{ ai_gen_id }} {
      height: 100%;
      object-fit: {{ block.settings.object_fit }};
    }
  {% endif %}
{% endstyle %}

<full-width-image-{{ ai_gen_id }}
  class="ai-full-width-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-full-width-image__wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2400 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-full-width-image__img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-full-width-image__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-full-width-image__empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}
  </div>
</full-width-image-{{ ai_gen_id }}>

<script>
  (function() {
    class FullWidthImage{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('full-width-image-{{ ai_gen_id }}', FullWidthImage{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Full width image",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Height settings"
    },
    {
      "type": "checkbox",
      "id": "enable_height_control",
      "label": "Enable custom height",
      "default": false
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 400
    },
    {
      "type": "range",
      "id": "min_height",
      "label": "Minimum height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 400
    },
    {
      "type": "select",
      "id": "object_fit",
      "label": "Image fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "fill",
          "label": "Fill"
        }
      ],
      "default": "cover"
    }
  ],
  "presets": [
    {
      "name": "Full width image"
    }
  ]
}
{% endschema %}
