{% doc %}
  @prompt
    carrousel section that showcases 6 photos and auto scrolls every 3 seconds to showcase the other photos. infinite scroll vibe, portrait size
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-carousel-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 0;
  }

  .ai-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    animation: ai-carousel-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    will-change: transform;
  }

  .ai-carousel-{{ ai_gen_id }}:hover .ai-carousel-track-{{ ai_gen_id }} {
    animation-play-state: paused;
  }

  .ai-carousel-item-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    position: relative;
  }

  .ai-carousel-item-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-carousel-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-carousel-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-carousel-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  @keyframes ai-carousel-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-{{ block.settings.image_width }}px - {{ block.settings.gap }}px) * 6);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-item-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.7 }}px;
      height: {{ block.settings.image_height | times: 0.7 }}px;
    }

    @keyframes ai-carousel-scroll-{{ ai_gen_id }} {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-{{ block.settings.image_width | times: 0.7 }}px - {{ block.settings.gap }}px) * 6);
      }
    }
  }
{% endstyle %}

<ai-carousel-{{ ai_gen_id }} class="ai-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-carousel-track-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% assign image_key = 'image_' | append: i %}
      {% assign image = block.settings[image_key] %}
      
      <div class="ai-carousel-item-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 800 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_width }}"
            height="{{ block.settings.image_height }}"
          >
        {% else %}
          <div class="ai-carousel-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            {% if i == 1 %}
              <div class="ai-carousel-empty-state-{{ ai_gen_id }}">
                Add images to start
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endfor %}

    {% for i in (1..6) %}
      {% assign image_key = 'image_' | append: i %}
      {% assign image = block.settings[image_key] %}
      
      <div class="ai-carousel-item-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 800 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_width }}"
            height="{{ block.settings.image_height }}"
          >
        {% else %}
          <div class="ai-carousel-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</ai-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class AiCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-carousel-track-{{ ai_gen_id }}');
        this.setupInfiniteScroll();
      }

      setupInfiniteScroll() {
        const items = this.track.querySelectorAll('.ai-carousel-item-{{ ai_gen_id }}');
        if (items.length === 0) return;

        this.track.addEventListener('animationiteration', () => {
          this.track.style.animation = 'none';
          requestAnimationFrame(() => {
            this.track.style.animation = null;
          });
        });
      }
    }

    customElements.define('ai-carousel-{{ ai_gen_id }}', AiCarousel{{ ai_gen_id }});
  })();
</script>

