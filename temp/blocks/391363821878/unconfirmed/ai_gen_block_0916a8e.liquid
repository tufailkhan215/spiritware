<script>
(function() {
  class WhatsIncluded{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.animationsEnabled = {{ block.settings.enable_animations | json }};
      this.prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    }

    connectedCallback() {
      if (!this.animationsEnabled || this.prefersReducedMotion) {
        this.showAllImmediately();
        return;
      }

      this.setupIntersectionObserver();
    }

    showAllImmediately() {
      const heading = this.querySelector('[data-animate="heading"]');
      const cards = this.querySelectorAll('[data-animate="card"]');
      
      if (heading) heading.classList.add('is-visible');
      cards.forEach(card => card.classList.add('is-visible'));
    }

    setupIntersectionObserver() {
      const heading = this.querySelector('[data-animate="heading"]');
      const cards = this.querySelectorAll('[data-animate="card"]');

      const observerOptions = {
        threshold: 0.15,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            if (entry.target.dataset.animate === 'heading') {
              entry.target.classList.add('is-visible');
            } else if (entry.target.dataset.animate === 'card') {
              const index = parseInt(entry.target.dataset.index);
              const row = Math.floor(index / 3);
              const col = index % 3;
              const delay = (row * 3 + col) * 100;
              
              setTimeout(() => {
                entry.target.classList.add('is-visible');
              }, delay);
            }
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      if (heading) observer.observe(heading);
      cards.forEach(card => observer.observe(card));
    }
  }

  customElements.define('whats-included-{{ ai_gen_id }}', WhatsIncluded{{ ai_gen_id }});
})();
</script>

