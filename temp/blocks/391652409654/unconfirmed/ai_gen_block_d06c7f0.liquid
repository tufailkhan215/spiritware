    animation: guide-spotlight-stamp-{{ ai_gen_id }} 0.6s ease-out 0.6s forwards;
  }

  @keyframes guide-spotlight-stamp-{{ ai_gen_id }} {
    0% {
      opacity: 0;
      transform: scale(0.95);
      letter-spacing: 0.3em;
    }
    100% {
      opacity: 1;
      transform: scale(1);
      letter-spacing: 0.2em;
    }
  }

  .guide-spotlight-name-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: inline-block;
    margin-bottom: 12px;
  }

  .guide-spotlight-name-{{ ai_gen_id }} {
    font-family: Georgia, serif;
    font-size: 48px;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0;
    clip-path: inset(0 100% 0 0);
  }

  @media (max-width: 749px) {
    .guide-spotlight-name-{{ ai_gen_id }} {
      font-size: 36px;
    }
  }

