<script>
  (function() {
    class GuideSpotlight{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.hasAnimated = false;
      }

      connectedCallback() {
        this.setupIntersectionObserver();
      }

      setupIntersectionObserver() {
        const options = {
          threshold: 0.2,
          rootMargin: '0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting && !this.hasAnimated) {
              this.classList.add('is-visible');
              this.hasAnimated = true;
              this.animateStats();
            }
          });
        }, options);

        observer.observe(this);
      }

      animateStats() {
        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        if (prefersReducedMotion) return;

        const stats = this.querySelectorAll('.guide-spotlight-stat-{{ ai_gen_id }}');
        
        stats.forEach((stat, index) => {
          const valueElement = stat.querySelector('[data-count-target]');
          const originalValue = stat.dataset.value;
          const numericMatch = originalValue.match(/(\d+)/);
          
          if (numericMatch) {
            const targetNumber = parseInt(numericMatch[0]);
            const prefix = originalValue.substring(0, numericMatch.index);
            const suffix = originalValue.substring(numericMatch.index + numericMatch[0].length);
            
            setTimeout(() => {
              this.countUp(valueElement, 0, targetNumber, 1000, prefix, suffix);
            }, 1800 + (index * 200));
          }
        });
      }

      countUp(element, start, end, duration, prefix, suffix) {
        const range = end - start;
        const increment = range / (duration / 16);
        let current = start;
        
        const timer = setInterval(() => {
          current += increment;
          if (current >= end) {
            current = end;
            clearInterval(timer);
          }
          element.textContent = prefix + Math.floor(current) + suffix;
        }, 16);
      }
    }

    customElements.define('guide-spotlight-{{ ai_gen_id }}', GuideSpotlight{{ ai_gen_id }});
  })();
</script>

