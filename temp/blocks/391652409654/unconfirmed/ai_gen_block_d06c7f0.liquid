    animation: guide-spotlight-name-reveal-{{ ai_gen_id }} 1s ease-out 0.8s forwards;
  }

  @keyframes guide-spotlight-name-reveal-{{ ai_gen_id }} {
    to {
      opacity: 1;
      clip-path: inset(0 0 0 0);
    }
  }

  .guide-spotlight-underline-{{ ai_gen_id }} {
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: 12px;
    overflow: visible;
  }

  .guide-spotlight-underline-{{ ai_gen_id }} path {
    stroke: {{ block.settings.accent_color }};
    stroke-width: 2;
    fill: none;
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
  }

  .guide-spotlight-{{ ai_gen_id }}.is-visible .guide-spotlight-underline-{{ ai_gen_id }} path {
    animation: guide-spotlight-draw-underline-{{ ai_gen_id }} 1.2s ease-out 1.2s forwards;
  }

  @keyframes guide-spotlight-draw-underline-{{ ai_gen_id }} {
    to {
      stroke-dashoffset: 0;
    }
  }

