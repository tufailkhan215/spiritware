    display: flex;
    gap: 32px;
    flex-wrap: wrap;
  }

  @media (max-width: 749px) {
    .guide-spotlight-stats-{{ ai_gen_id }} {
      gap: 24px;
    }
  }

  .guide-spotlight-stat-{{ ai_gen_id }} {
    opacity: 0;
    transform: translateY(20px);
  }

  .guide-spotlight-{{ ai_gen_id }}.is-visible .guide-spotlight-stat-{{ ai_gen_id }}:nth-child(1) {
    animation: guide-spotlight-fade-up-{{ ai_gen_id }} 0.6s ease-out 1.8s forwards;
  }

  .guide-spotlight-{{ ai_gen_id }}.is-visible .guide-spotlight-stat-{{ ai_gen_id }}:nth-child(2) {
    animation: guide-spotlight-fade-up-{{ ai_gen_id }} 0.6s ease-out 2s forwards;
