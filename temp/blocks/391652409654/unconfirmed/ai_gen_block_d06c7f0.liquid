  .guide-spotlight-stat-label-{{ ai_gen_id }} {
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: {{ block.settings.text_color | color_modify: 'alpha', 0.7 }};
  }

  @media (prefers-reduced-motion: reduce) {
    .guide-spotlight-{{ ai_gen_id }}::before,
    .guide-spotlight-container-{{ ai_gen_id }},
    .guide-spotlight-frame-offset-{{ ai_gen_id }},
    .guide-spotlight-image-container-{{ ai_gen_id }},
    .guide-spotlight-tape-{{ ai_gen_id }},
    .guide-spotlight-eyebrow-{{ ai_gen_id }},
    .guide-spotlight-name-{{ ai_gen_id }},
    .guide-spotlight-underline-{{ ai_gen_id }} path,
    .guide-spotlight-role-{{ ai_gen_id }},
    .guide-spotlight-bio-{{ ai_gen_id }},
    .guide-spotlight-stat-{{ ai_gen_id }} {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
      clip-path: none !important;
    }

    .guide-spotlight-image-container-{{ ai_gen_id }} img,
    .guide-spotlight-underline-{{ ai_gen_id }} path {
      transition: none !important;
    }
  }
