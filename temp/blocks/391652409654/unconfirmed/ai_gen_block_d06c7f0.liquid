    animation: guide-spotlight-shimmer-{{ ai_gen_id }} 0.8s ease-out;
  }

  @keyframes guide-spotlight-shimmer-{{ ai_gen_id }} {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.4;
    }
  }

  .guide-spotlight-role-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.accent_color }};
    margin-bottom: 24px;
    opacity: 0;
    transform: translateY(20px);
  }

  .guide-spotlight-{{ ai_gen_id }}.is-visible .guide-spotlight-role-{{ ai_gen_id }} {
    animation: guide-spotlight-fade-up-{{ ai_gen_id }} 0.8s ease-out 1.4s forwards;
  }

  @keyframes guide-spotlight-fade-up-{{ ai_gen_id }} {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .guide-spotlight-bio-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.7;
    color: {{ block.settings.text_color | color_modify: 'alpha', 0.8 }};
    margin-bottom: 32px;
    opacity: 0;
    transform: translateY(20px);
  }

  .guide-spotlight-{{ ai_gen_id }}.is-visible .guide-spotlight-bio-{{ ai_gen_id }} {
    animation: guide-spotlight-fade-up-{{ ai_gen_id }} 0.8s ease-out 1.6s forwards;
  }

