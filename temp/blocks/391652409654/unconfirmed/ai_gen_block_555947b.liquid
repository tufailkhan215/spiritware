    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent 0%, {{ block.settings.accent_color }}08 50%, transparent 100%);
    opacity: 0;
    pointer-events: none;
  }

  {% if block.settings.enable_animations %}
    @media (prefers-reduced-motion: no-preference) {
      .ai-guide-spotlight-{{ ai_gen_id }}.is-visible .ai-guide-spotlight-bg-wash-{{ ai_gen_id }} {
        animation: ai-guide-bg-wash-{{ ai_gen_id }} 2s ease-out forwards;
      }
    }

    @keyframes ai-guide-bg-wash-{{ ai_gen_id }} {
      0% {
        opacity: 0;
        transform: translateX(-20%);
      }
      50% {
        opacity: 1;
      }
      100% {
        opacity: 0.6;
        transform: translateX(20%);
      }
    }
  {% endif %}

  .ai-guide-spotlight-container-{{ ai_gen_id }} {
    max-width: 1180px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 50px;
    align-items: center;
  }

  @media (min-width: 750px) {
    .ai-guide-spotlight-container-{{ ai_gen_id }} {
      grid-template-columns: 46% 54%;
      gap: 70px;
    }
  }

  .ai-guide-spotlight-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
  }

  @media (min-width: 750px) {
    .ai-guide-spotlight-image-wrapper-{{ ai_gen_id }} {
      max-width: none;
    }
  }

  .ai-guide-spotlight-frame-offset-{{ ai_gen_id }} {
    position: absolute;
    top: 14px;
    left: 14px;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.background_color | color_darken: 8 }};
    border-radius: 2px;
    z-index: 1;
  }

  {% if block.settings.enable_animations %}
    @media (prefers-reduced-motion: no-preference) {
      .ai-guide-spotlight-frame-offset-{{ ai_gen_id }} {
        opacity: 0;
        transform: translateX(-30px);
      }

      .ai-guide-spotlight-{{ ai_gen_id }}.is-visible .ai-guide-spotlight-frame-offset-{{ ai_gen_id }} {
        animation: ai-guide-frame-slide-{{ ai_gen_id }} 0.8s ease-out 0.2s forwards;
      }
    }

    @keyframes ai-guide-frame-slide-{{ ai_gen_id }} {
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
  {% endif %}

  .ai-guide-spotlight-image-frame-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    border: 1px solid {{ block.settings.background_color | color_darken: 15 }};
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    border-radius: 2px;
    background: #fff;
  }

  {% if block.settings.enable_animations %}
    @media (prefers-reduced-motion: no-preference) {
      .ai-guide-spotlight-image-frame-{{ ai_gen_id }} {
        transform: rotate(-1.5deg) scale(1.03);
        opacity: 0;
      }

      .ai-guide-spotlight-{{ ai_gen_id }}.is-visible .ai-guide-spotlight-image-frame-{{ ai_gen_id }} {
