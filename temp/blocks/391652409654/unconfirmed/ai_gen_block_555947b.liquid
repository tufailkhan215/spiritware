<script>
(function() {
  class GuideSpotlight{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.animationsEnabled = {{ block.settings.enable_animations | json }};
      this.hasAnimated = false;
    }

    connectedCallback() {
      if (this.animationsEnabled) {
        this.setupIntersectionObserver();
      } else {
        this.classList.add('is-visible');
      }
    }

    setupIntersectionObserver() {
      const options = {
        threshold: 0.2,
        rootMargin: '0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && !this.hasAnimated) {
            this.classList.add('is-visible');
            this.hasAnimated = true;
            this.animateCounters();
          }
        });
      }, options);

      observer.observe(this);
    }

    animateCounters() {
      if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
        return;
      }

      const stats = this.querySelectorAll('.ai-guide-spotlight-stat-{{ ai_gen_id }}');
      
      stats.forEach((stat, index) => {
        const target = stat.querySelector('[data-count-target]');
        const value = stat.dataset.statValue;
        
        const numericMatch = value.match(/(\d+)/);
        if (!numericMatch) return;

        const finalNumber = parseInt(numericMatch[1], 10);
        const prefix = value.substring(0, numericMatch.index);
        const suffix = value.substring(numericMatch.index + numericMatch[1].length);
        
        const duration = 1000;
        const startDelay = 1700 + (index * 150);
        const startTime = performance.now() + startDelay;
        
        const animate = (currentTime) => {
          if (currentTime < startTime) {
            requestAnimationFrame(animate);
            return;
          }

          const elapsed = currentTime - startTime;
          const progress = Math.min(elapsed / duration, 1);
          const easeOut = 1 - Math.pow(1 - progress, 3);
          const current = Math.floor(easeOut * finalNumber);
          
          target.textContent = prefix + current + suffix;
          
          if (progress < 1) {
            requestAnimationFrame(animate);
          } else {
            target.textContent = value;
          }
        };
        
        requestAnimationFrame(animate);
      });
    }
  }

  customElements.define('guide-spotlight-{{ ai_gen_id }}', GuideSpotlight{{ ai_gen_id }});
})();
</script>

