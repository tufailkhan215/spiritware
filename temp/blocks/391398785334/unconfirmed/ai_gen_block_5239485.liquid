<script>
  (function() {
    class TestimonialSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.slider = null;
        this.cards = [];
        this.dots = [];
        this.currentIndex = 0;
        this.isAnimated = false;
        this.isMobile = window.innerWidth <= 989;
        this.prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      }

      connectedCallback() {
        this.slider = this.querySelector('[data-slider]');
        this.cards = Array.from(this.querySelectorAll('[data-card]'));
        this.dots = Array.from(this.querySelectorAll('[data-dot]'));

        this.setupIntersectionObserver();
        this.setupMobileSlider();
        this.setupMagneticHover();
        this.setupResizeObserver();
      }

      setupIntersectionObserver() {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting && !this.isAnimated) {
              this.classList.add('ai-animated');
              this.isAnimated = true;
            }
          });
        }, {
          threshold: 0.2
        });

        observer.observe(this);
      }

      setupMobileSlider() {
        if (!this.isMobile) return;

        this.updateActiveCard();

        this.slider.addEventListener('scroll', () => {
          this.updateActiveCard();
        });
      }

      updateActiveCard() {
        if (!this.isMobile) return;

        const scrollLeft = this.slider.scrollLeft;
        const cardWidth = this.cards[0].offsetWidth;
        const gap = 20;
        const index = Math.round(scrollLeft / (cardWidth + gap));

        this.currentIndex = Math.max(0, Math.min(index, this.cards.length - 1));

        this.cards.forEach((card, i) => {
          if (i === this.currentIndex) {
            card.classList.add('active');
          } else {
            card.classList.remove('active');
          }
        });

        this.dots.forEach((dot, i) => {
          if (i === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      setupMagneticHover() {
        if (this.isMobile || this.prefersReducedMotion) return;

        this.cards.forEach(card => {
          card.addEventListener('mousemove', (e) => {
            const rect = card.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            const rotateX = (y - centerY) / centerY * 1;
            const rotateY = (x - centerX) / centerX * 1;

            card.style.transform = `perspective(1000px) rotateX(${-rotateX}deg) rotateY(${rotateY}deg)`;
          });

          card.addEventListener('mouseleave', () => {
            card.style.transform = '';
          });
        });
      }

      setupResizeObserver() {
        const resizeObserver = new ResizeObserver(() => {
          const wasMobile = this.isMobile;
          this.isMobile = window.innerWidth <= 989;

          if (wasMobile !== this.isMobile) {
            if (this.isMobile) {
              this.setupMobileSlider();
              this.cards.forEach(card => {
                card.style.transform = '';
              });
            } else {
              this.cards.forEach(card => {
                card.classList.remove('active');
              });
            }
          }
        });

        resizeObserver.observe(document.body);
      }
    }

    customElements.define('testimonial-slider-{{ ai_gen_id }}', TestimonialSlider{{ ai_gen_id }});
  })();
</script>

