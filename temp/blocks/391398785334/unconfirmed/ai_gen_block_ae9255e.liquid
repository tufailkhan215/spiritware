<script>
(function() {
  class AiRetreatSpotlight{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.enableAnimations = this.dataset.enableAnimations === 'true';
      this.enableParallax = this.dataset.enableParallax === 'true';
      this.cards = [];
      this.observer = null;
      this.rafId = null;
      this.isMobile = window.matchMedia('(max-width: 768px)').matches;
      this.prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    }

    connectedCallback() {
      this.init();
    }

    disconnectedCallback() {
      if (this.observer) {
        this.observer.disconnect();
      }
      if (this.rafId) {
        cancelAnimationFrame(this.rafId);
      }
      window.removeEventListener('scroll', this.handleScroll);
    }

    init() {
      if (!this.enableAnimations || this.prefersReducedMotion) {
        this.showAllElements();
        return;
      }

      this.animateHeader();
      this.setupCards();
      
      if (!this.isMobile) {
        this.setupSpotlightObserver();
        if (this.enableParallax) {
          this.handleScroll = this.handleScrollParallax.bind(this);
          window.addEventListener('scroll', this.handleScroll, { passive: true });
        }
      } else {
        this.cards.forEach(card => card.classList.add('is-loaded'));
      }
    }

    showAllElements() {
      const eyebrow = this.querySelector('.ai-retreat-spotlight-eyebrow-{{ ai_gen_id }}');
      const heading = this.querySelector('.ai-retreat-spotlight-heading-{{ ai_gen_id }}');
      const subtitle = this.querySelector('.ai-retreat-spotlight-subtitle-{{ ai_gen_id }}');
      const cards = this.querySelectorAll('.ai-retreat-card-{{ ai_gen_id }}');

      if (eyebrow) eyebrow.style.opacity = '1';
      if (heading) heading.style.opacity = '1';
      if (subtitle) subtitle.style.opacity = '1';
      cards.forEach(card => {
        card.style.opacity = '1';
        card.style.transform = 'none';
      });
    }

    animateHeader() {
      const eyebrow = this.querySelector('.ai-retreat-spotlight-eyebrow-{{ ai_gen_id }}');
      const heading = this.querySelector('.ai-retreat-spotlight-heading-{{ ai_gen_id }}');
      const subtitle = this.querySelector('.ai-retreat-spotlight-subtitle-{{ ai_gen_id }}');

      const headerObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            if (eyebrow) eyebrow.classList.add('is-visible');
            if (heading) heading.classList.add('is-visible');
            if (subtitle) subtitle.classList.add('is-visible');
            headerObserver.disconnect();
          }
        });
      }, { threshold: 0.2 });

      const header = this.querySelector('.ai-retreat-spotlight-header-{{ ai_gen_id }}');
      if (header) {
        headerObserver.observe(header);
      }
    }

    setupCards() {
      this.cards = Array.from(this.querySelectorAll('.ai-retreat-card-{{ ai_gen_id }}'));
      
      const cardObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            setTimeout(() => {
              entry.target.classList.add('is-loaded');
            }, entry.target.dataset.cardIndex * 100);
            cardObserver.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });

      this.cards.forEach(card => {
        cardObserver.observe(card);
      });
    }

    setupSpotlightObserver() {
      this.observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && entry.intersectionRatio >= 0.5) {
            this.cards.forEach(card => card.classList.remove('is-active'));
            entry.target.classList.add('is-active');
          }
        });
      }, {
        threshold: [0, 0.25, 0.5, 0.75, 1],
        rootMargin: '-20% 0px -20% 0px'
      });

      this.cards.forEach(card => {
        this.observer.observe(card);
      });
    }

    handleScrollParallax() {
      if (this.rafId) {
        cancelAnimationFrame(this.rafId);
      }

      this.rafId = requestAnimationFrame(() => {
        this.cards.forEach(card => {
          if (card.classList.contains('is-active')) {
            const image = card.querySelector('.ai-retreat-card-image-{{ ai_gen_id }}');
            if (image) {
              const rect = card.getBoundingClientRect();
              const cardCenter = rect.top + rect.height / 2;
              const viewportCenter = window.innerHeight / 2;
              const distance = cardCenter - viewportCenter;
              const parallaxAmount = distance * 0.03;
              image.style.transform = `translateY(${parallaxAmount}px)`;
            }
          }
        });
      });
    }
  }

  customElements.define('ai-retreat-spotlight-{{ ai_gen_id }}', AiRetreatSpotlight{{ ai_gen_id }});
})();
</script>

