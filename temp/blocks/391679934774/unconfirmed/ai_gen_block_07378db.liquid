{% doc %}
  @prompt
    carrousel section that showcases 6 photos and auto scrolls every 3 seconds to showcase the other photos. infinite scroll vibe, portrait size, please make sure that i can add up to 12 photos. please make sure it auto rotates and stops when hovered.
    
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-carousel-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
  }

  .ai-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    animation: ai-carousel-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    will-change: transform;
  }

  .ai-carousel-{{ ai_gen_id }}:hover .ai-carousel-track-{{ ai_gen_id }} {
    animation-play-state: paused;
  }

  .ai-carousel-item-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-carousel-item-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-carousel-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-carousel-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @keyframes ai-carousel-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-{{ block.settings.image_width }}px * 12 - {{ block.settings.gap }}px * 12));
    }
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-item-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_image_width }}px;
      height: {{ block.settings.mobile_image_height }}px;
    }

    @keyframes ai-carousel-scroll-{{ ai_gen_id }} {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-{{ block.settings.mobile_image_width }}px * 12 - {{ block.settings.gap }}px * 12));
      }
    }
  }
{% endstyle %}

<auto-carousel-{{ ai_gen_id }} class="ai-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-carousel-track-{{ ai_gen_id }}">
    {% for i in (1..12) %}
      {% assign image_key = 'image_' | append: i %}
      {% assign image = block.settings[image_key] %}
      
      <div class="ai-carousel-item-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 800 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_width }}"
            height="{{ block.settings.image_height }}"
          >
        {% else %}
          <div class="ai-carousel-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endfor %}

    {% for i in (1..12) %}
      {% assign image_key = 'image_' | append: i %}
      {% assign image = block.settings[image_key] %}
      
      <div class="ai-carousel-item-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 800 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_width }}"
            height="{{ block.settings.image_height }}"
          >
        {% else %}
          <div class="ai-carousel-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</auto-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class AutoCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-carousel-track-{{ ai_gen_id }}');
        this.setupInfiniteScroll();
      }

      setupInfiniteScroll() {
        this.addEventListener('mouseenter', () => {
          this.track.style.animationPlayState = 'paused';
        });

        this.addEventListener('mouseleave', () => {
          this.track.style.animationPlayState = 'running';
        });
      }
    }

    customElements.define('auto-carousel-{{ ai_gen_id }}', AutoCarousel{{ ai_gen_id }});
  })();
</script>

