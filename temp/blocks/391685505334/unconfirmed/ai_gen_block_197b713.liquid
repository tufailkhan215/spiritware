{% doc %}
  @prompt
    category product
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-product-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-category-product__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-category-product__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-category-product__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-category-product__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-category-product__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-category-product__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    background-color: {{ block.settings.card_background }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-category-product__item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-category-product__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-category-product__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-category-product__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-category-product__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-category-product__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-category-product__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 500;
    line-height: 1.4;
  }

  .ai-category-product__product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-category-product__product-title-{{ ai_gen_id }} a:hover {
    opacity: 0.7;
  }

  .ai-category-product__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 600;
  }

  .ai-category-product__price--compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-category-product__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-category-product__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }

    .ai-category-product__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-category-product__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-category-product-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-category-product__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.7);
    }
  }
{% endstyle %}

<category-products-{{ ai_gen_id }}
  class="ai-category-product-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-category-product__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-category-product__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-category-product__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-category-product__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-category-product__grid-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <div class="ai-category-product__item-{{ ai_gen_id }}">
            <a href="{{ product.url }}">
              <div class="ai-category-product__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-category-product__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-category-product__placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
            </a>
            <div class="ai-category-product__content-{{ ai_gen_id }}">
              <h3 class="ai-category-product__product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              <div class="ai-category-product__price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span class="ai-category-product__price--compare-{{ ai_gen_id }}">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
                <span>{{ product.price | money }}</span>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-category-product__empty-state-{{ ai_gen_id }}">
        Select a collection to display products
      </div>
    {% endif %}
  </div>
</category-products-{{ ai_gen_id }}>

<script>
  (function() {
    class CategoryProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.init();
      }

      init() {
        const items = this.querySelectorAll('.ai-category-product__item-{{ ai_gen_id }}');
        items.forEach((item, index) => {
          item.style.animationDelay = `${index * 0.1}s`;
        });
      }
    }

    customElements.define('category-products-{{ ai_gen_id }}', CategoryProducts{{ ai_gen_id }});
  })();
</script>

