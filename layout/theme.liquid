<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="{{ settings.colors_accent_1 }}">
  <link rel="canonical" href="{{ canonical_url }}">
  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
  {%- endif -%}
  {%- if settings.type_header_font != blank or settings.type_body_font != blank -%}
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
  {%- endif -%}
  <title>{{ page_title }}{% if current_tags %} &ndash; {{ current_tags | join: ', ' }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>
  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
  {%- endif -%}
  {% render 'meta-tags' %}
  {{ content_for_header }}

  {%- liquid
    assign body_font = settings.type_body_font
    assign heading_font = settings.type_header_font
  -%}
  {% style %}
    {{ body_font | font_face: font_display: 'swap' }}
    {{ heading_font | font_face: font_display: 'swap' }}

    :root {
      --font-body-family: {{ body_font.family }}, {{ body_font.fallback_families }};
      --font-body-weight: {{ body_font.weight }};
      --font-body-style: {{ body_font.style }};
      --font-heading-family: {{ heading_font.family }}, {{ heading_font.fallback_families }};
      --font-heading-weight: {{ heading_font.weight }};
      --font-heading-style: {{ heading_font.style }};

      --color-base-text: {{ settings.colors_text }};
      --color-shadow: {{ settings.colors_text | color_modify: 'alpha', 0.15 }};
      --color-base-background-1: {{ settings.colors_background_1 }};
      --color-base-background-2: {{ settings.colors_background_2 }};
      --color-base-solid-button-labels: {{ settings.colors_solid_button_labels }};
      --color-base-outline-button-labels: {{ settings.colors_outline_button_labels }};
      --color-base-accent-1: {{ settings.colors_accent_1 }};
      --color-base-accent-2: {{ settings.colors_accent_2 }};

      --color-primary: #d97706;
      --color-primary-dark: #b45309;
      --color-dark-gray: #2a2a2a;
      --color-light-gray: #f5f5f5;
      --color-white: #ffffff;

      --page-width: {{ settings.page_width }}px;
      --page-width-margin: 2rem;
      --spacing-sections-desktop: {{ settings.spacing_sections }}px;
      --spacing-sections-mobile: {{ settings.spacing_sections | times: 0.6 | round }}px;
      --grid-desktop-horizontal-spacing: {{ settings.spacing_grid_horizontal }}px;
      --grid-desktop-vertical-spacing: {{ settings.spacing_grid_vertical }}px;
    }

    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    html {
      font-size: 62.5%;
      -webkit-text-size-adjust: 100%;
    }

    body {
      display: grid;
      grid-template-rows: auto auto 1fr auto;
      min-height: 100vh;
      margin: 0;
      font-family: var(--font-body-family);
      font-weight: var(--font-body-weight);
      font-style: var(--font-body-style);
      font-size: 1.6rem;
      line-height: 1.6;
      color: var(--color-base-text);
      background-color: var(--color-base-background-1);
    }
  {% endstyle %}

  <link rel="stylesheet" href="{{ 'base.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'components.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'utilities.css' | asset_url }}">
  <link rel="stylesheet" href="{{ 'responsive.css' | asset_url }}">

  <script src="{{ 'global.js' | asset_url }}" defer></script>
  <script src="{{ 'visual-editor.js' | asset_url }}" defer></script>
</head>
<body class="template-{{ template.name }}{% if template.suffix %} template-{{ template.name }}-{{ template.suffix }}{% endif %}">
  <a class="skip-to-content-link button visually-hidden-focusable" href="#MainContent">
    {{ 'accessibility.skip_to_text' | t }}
  </a>

  {% section 'header' %}

  {% render 'cart-drawer' %}

  <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  <ul class="visually-hidden" aria-hidden="true">
    <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
  </ul>

  <script>
    window.shopUrl = '{{ shop.url }}';
    window.routes = {
      cart_add_url: '{{ routes.cart_add_url }}',
      cart_change_url: '{{ routes.cart_change_url }}',
      cart_update_url: '{{ routes.cart_update_url }}',
      cart_url: '{{ routes.cart_url }}',
      predictive_search_url: '{{ routes.predictive_search_url }}'
    };
    window.cartStrings = {
      error: `{{ 'sections.cart.cart_error' | t }}`,
      quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
    };
    window.variantStrings = {
      addToCart: `{{ 'products.product.add_to_cart' | t }}`,
      soldOut: `{{ 'products.product.sold_out' | t }}`,
      unavailable: `{{ 'products.product.unavailable' | t }}`
    };
    window.accessibilityStrings = {
      shareSuccess: `{{ 'general.share.success_message' | t }}`
    };
    window.predictiveSearchStrings = {
      products: `{{ 'general.search.products' | t }}`,
      collections: `{{ 'general.search.collections' | t }}`,
      articles: `{{ 'general.search.articles' | t }}`,
      pages: `{{ 'general.search.pages' | t }}`,
      queries: `{{ 'general.search.queries' | t }}`,
      no_results: `{{ 'general.search.no_results' | t }}`
    };
  </script>

  <script src="{{ 'theme.js' | asset_url }}" defer></script>
  <script src="{{ 'cart-drawer.js' | asset_url }}" defer></script>
  <script src="{{ 'cart.js' | asset_url }}" defer></script>
  <script src="{{ 'slider.js' | asset_url }}" defer></script>
  <script src="{{ 'filters.js' | asset_url }}" defer></script>
  <script src="{{ 'product.js' | asset_url }}" defer></script>
  <script src="{{ 'menu.js' | asset_url }}" defer></script>
  <script src="{{ 'predictive-search.js' | asset_url }}" defer></script>
  <script src="{{ 'animations.js' | asset_url }}" defer></script>
</body>
</html>
