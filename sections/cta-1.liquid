{% comment %}
  CTA 1 â€” Call to action: full-width bg image + dark overlay, heading, text, button.
  Generic: works with any header. Design: #1A1A1A/70 overlay, #FAF7F2 text, #C4A77D hover.
{% endcomment %}

<section class="cta-1" id="{{ section.settings.section_id | default: 'cta' }}" aria-label="Call to Action">
  <div class="cta-1__bg">
    {%- if section.settings.image != blank -%}
      <img
        class="cta-1__image"
        src="{{ section.settings.image | image_url: width: 1920 }}"
        alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
        width="1920"
        height="1080"
        loading="lazy"
      >
    {%- endif -%}
    <div class="cta-1__overlay" aria-hidden="true"></div>
  </div>

  <div class="cta-1__container">
    {%- if section.settings.heading != blank -%}
      <h2 class="cta-1__heading">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}
    {%- if section.settings.text != blank -%}
      <p class="cta-1__text">{{ section.settings.text | escape }}</p>
    {%- endif -%}
    {%- if section.settings.button_text != blank -%}
      <a href="{{ section.settings.button_link | default: '#shop' }}" class="cta-1__btn">
        {{ section.settings.button_text | escape }}
        <svg class="cta-1__btn-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "CTA 1",
  "tag": "section",
  "class": "section-cta-1",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID (for anchor links)",
      "default": "cta",
      "info": "Use 'cta' to link with #cta."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Rebel with Reverence?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Join thousands of conscious warriors who wear their truth and walk in purpose."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop the Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "CTA 1"
    }
  ]
}
{% endschema %}
