{% comment %}
  Page Content Section
  Displays page title and content
{% endcomment %}

{%- if page.title != blank or page.content != blank -%}
  <div class="page-content">
    <div class="page-content-container">
      {%- if page.title != blank -%}
        <h1 class="page-title">{{ page.title }}</h1>
      {%- endif -%}
      
      {%- if page.content != blank -%}
        <div class="page-body">
          {{ page.content }}
        </div>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Page Content",
  "settings": [],
  "presets": [
    {
      "name": "Page Content"
    }
  ]
}
{% endschema %}
