{% comment %} Spiritware manifesto-1: cream/beige bg, serif quote lines. {% endcomment %}
<section class="manifesto-1 theme-1">
  <div class="manifesto-1__grain" aria-hidden="true"></div>
  <div class="theme-1-section manifesto-1__inner">
    {% if section.settings.label != blank %}
      <span class="theme-1-label manifesto-1__label">{{ section.settings.label }}</span>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2 class="theme-1-heading-serif manifesto-1__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="manifesto-1__quotes">
      {% for block in section.blocks %}
        {% if block.type == 'line' and block.settings.text != blank %}
          <p class="manifesto-1__line" {{ block.shopify_attributes }}>{{ block.settings.text }}</p>
        {% endif %}
      {% endfor %}
    </div>
    {% if section.settings.footer_text != blank %}
      <div class="manifesto-1__footer">
        <div class="manifesto-1__footer-line" aria-hidden="true"></div>
        <p class="manifesto-1__footer-text">{{ section.settings.footer_text }}</p>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Manifesto 1",
  "class": "section-manifesto-1",
  "settings": [
    { "type": "text", "id": "label", "label": "Label", "default": "Our Words" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "The Sacred Rebel Manifesto" },
    { "type": "textarea", "id": "footer_text", "label": "Footer quote", "default": "You don't wear this to be seenâ€”you wear it to be remembered." }
  ],
  "blocks": [
    {
      "type": "line",
      "name": "Quote line",
      "settings": [
        { "type": "textarea", "id": "text", "label": "Text" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Manifesto 1",
      "blocks": [
        { "type": "line", "settings": { "text": "We dress to reclaim our softness as strength." } },
        { "type": "line", "settings": { "text": "Our beauty as boundary." } },
        { "type": "line", "settings": { "text": "Our bodies as altar." } },
        { "type": "line", "settings": { "text": "Power doesn't have to shout." } },
        { "type": "line", "settings": { "text": "It drips in velvet, walks in gold, and speaks in sacred tongues." } },
        { "type": "line", "settings": { "text": "We wear our truth like armor." } },
        { "type": "line", "settings": { "text": "We rebel by remembering." } }
      ]
    }
  ]
}
{% endschema %}
