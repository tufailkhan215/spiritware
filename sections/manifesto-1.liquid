{% comment %}
  Manifesto 1 — Centered manifesto: subheading, heading, poetic lines, divider, closing quote.
  Generic: works with any header. Design: #EDE8E0, #1A1A1A, #C4A77D. Grain overlay.
{% endcomment %}

<section class="manifesto-1" id="{{ section.settings.section_id | default: 'manifesto' }}" aria-label="Manifesto">
  <div class="manifesto-1__grain" aria-hidden="true"></div>

  <div class="manifesto-1__container">
    <div class="manifesto-1__header">
      {%- if section.settings.subheading != blank -%}
        <span class="manifesto-1__subheading">{{ section.settings.subheading | escape }}</span>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="manifesto-1__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}
    </div>

    {%- if section.settings.body != blank -%}
      <div class="manifesto-1__body">
        {% capture newline %}
        {% endcapture %}
        {% assign lines = section.settings.body | split: newline %}
        {% for line in lines %}
          {% assign line_stripped = line | strip %}
          {% if line_stripped != blank %}
            <p class="manifesto-1__line">{{ line_stripped }}</p>
          {% endif %}
        {% endfor %}
      </div>
    {%- endif -%}

    {%- if section.settings.closing != blank -%}
      <div class="manifesto-1__closing">
        <div class="manifesto-1__divider" aria-hidden="true"></div>
        <p class="manifesto-1__closing-text">{{ section.settings.closing }}</p>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Manifesto 1",
  "tag": "section",
  "class": "section-manifesto-1",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID (for anchor links)",
      "default": "manifesto",
      "info": "Use 'manifesto' for #manifesto links."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our Words"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Sacred Rebel Manifesto"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Manifesto lines (one per line)",
      "default": "We dress to reclaim our softness as strength.\nOur beauty as boundary.\nOur bodies as altar.\nPower doesn't have to shout.\nIt drips in velvet, walks in gold, and speaks in sacred tongues.\nWe wear our truth like armor.\nWe rebel by remembering."
    },
    {
      "type": "textarea",
      "id": "closing",
      "label": "Closing quote",
      "default": "You don't wear this to be seen—you wear it to be remembered."
    }
  ],
  "presets": [
    {
      "name": "Manifesto 1"
    }
  ]
}
{% endschema %}
