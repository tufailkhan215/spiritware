      "id": "stat_1_value",
      "label": "Stat 1 value"
    },
    {
      "type": "text",
      "id": "stat_1_label",
      "label": "Stat 1 label"
    },
    {
      "type": "text",
      "id": "stat_2_value",
      "label": "Stat 2 value"
    },
    {
      "type": "text",
      "id": "stat_2_label",
      "label": "Stat 2 label"
    },
    {
      "type": "text",
      "id": "stat_3_value",
      "label": "Stat 3 value"
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "label": "Stat 3 label"
    },
    {
      "type": "text",
      "id": "stat_4_value",
      "label": "Stat 4 value"
    },
    {
      "type": "text",
      "id": "stat_4_label",
      "label": "Stat 4 label"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
