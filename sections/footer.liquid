<footer class="footer" role="contentinfo">
  <div class="footer__newsletter page-width" style="padding: 2rem 0; border-bottom: 1px solid rgba(255,255,255,0.1);">
    {% if section.settings.newsletter_heading != blank %}
      <h3 class="footer__newsletter-heading">{{ section.settings.newsletter_heading }}</h3>
    {% endif %}
    {% if section.settings.newsletter_description != blank %}
      <p class="footer__newsletter-description">{{ section.settings.newsletter_description }}</p>
    {% endif %}
    {% form 'customer', class: 'footer__newsletter-form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <input type="email" name="contact[email]" placeholder="{{ 'customer.newsletter.email_placeholder' | t }}" required>
      <button type="submit" class="button button--primary">{{ 'customer.newsletter.submit' | t }}</button>
    {% endform %}
  </div>

  <div class="footer__main page-width" style="padding: 3rem 0; display: grid; grid-template-columns: 1fr; gap: 2rem;">
    <div class="footer__brand">
      <h4 class="footer__column-title">{{ shop.name }}</h4>
      {% if section.settings.company_description != blank %}
        <p class="footer__company-description">{{ section.settings.company_description }}</p>
      {% endif %}
      <div class="footer__social" style="display: flex; gap: 0.75rem; margin-top: 1rem;">
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram">Instagram</a>
        {% endif %}
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" aria-label="Facebook">Facebook</a>
        {% endif %}
      </div>
    </div>
    {% if section.settings.shop_menu != blank and linklists[section.settings.shop_menu].links.size > 0 %}
      <div class="footer__column">
        <h4 class="footer__column-title">{{ linklists[section.settings.shop_menu].title }}</h4>
        <ul class="footer__links" style="list-style: none; padding: 0; margin: 0;">
          {% for link in linklists[section.settings.shop_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
    {% if section.settings.company_menu != blank and linklists[section.settings.company_menu].links.size > 0 %}
      <div class="footer__column">
        <h4 class="footer__column-title">{{ linklists[section.settings.company_menu].title }}</h4>
        <ul class="footer__links" style="list-style: none; padding: 0; margin: 0;">
          {% for link in linklists[section.settings.company_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
    <div class="footer__stores">
      <h4 class="footer__column-title">{{ 'layout.footer.visit_us' | t }}</h4>
      {% for block in section.blocks %}
        {% if block.type == 'store' %}
          <div class="footer__store" {{ block.shopify_attributes }}>
            <strong>{{ block.settings.name }}</strong>
            {% if block.settings.address != blank %}<p>{{ block.settings.address }}</p>{% endif %}
            {% if block.settings.hours != blank %}<p>{{ block.settings.hours }}</p>{% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="footer__bottom page-width" style="padding: 1rem 0; border-top: 1px solid rgba(255,255,255,0.1); display: flex; flex-wrap: wrap; justify-content: space-between; align-items: center; gap: 1rem;">
    <p class="footer__copyright">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'layout.footer.copyright' | t }}</p>
    <nav class="footer__legal">
      <a href="{{ routes.root_url }}pages/privacy-policy">{{ 'layout.footer.privacy' | t }}</a>
      <a href="{{ routes.root_url }}pages/terms-of-service">{{ 'layout.footer.terms' | t }}</a>
      <a href="{{ routes.root_url }}pages/shipping-returns">{{ 'layout.footer.shipping_returns' | t }}</a>
    </nav>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading"
    },
    {
      "type": "textarea",
      "id": "newsletter_description",
      "label": "Newsletter description"
    },
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company description"
    },
    {
      "type": "link_list",
      "id": "shop_menu",
      "label": "Shop menu"
    },
    {
      "type": "link_list",
      "id": "company_menu",
      "label": "Company menu"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    }
  ],
  "blocks": [
    {
      "type": "store",
      "name": "Store",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Store name"
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Address"
        },
        {
          "type": "text",
          "id": "hours",
          "label": "Hours"
        }
      ]
    }
  ]
}
{% endschema %}
