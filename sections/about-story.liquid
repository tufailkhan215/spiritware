<div class="about-story section page-width" style="padding: 4rem 0;">
  <div class="about-story__grid" style="display: grid; gap: 2rem; grid-template-columns: 1fr;">
    <div class="about-story__content">
      {% if section.settings.small_heading != blank %}
        <span class="about-story__label" style="font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em; color: var(--color-primary);">{{ section.settings.small_heading }}</span>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="about-story__heading" style="font-size: 2rem; margin: 0.5rem 0 1rem;">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.content != blank %}
        <div class="about-story__body rte">{{ section.settings.content }}</div>
      {% endif %}
    </div>
    {% if section.settings.image != blank %}
      <div class="about-story__image" style="border-radius: 1rem; overflow: hidden; background: var(--color-light-gray);">
        <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.heading | escape }}" loading="lazy" style="width: 100%; height: auto; display: block;" />
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "About story",
  "class": "section-about-story",
  "settings": [
    {
      "type": "text",
      "id": "small_heading",
      "label": "Small heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ]
}
{% endschema %}
