{% comment %}
  From the Journal: section heading + grid of blog post cards (image 2:1, category, title).
  Section background: color or image (theme setting). Dark theme, light text.
{% endcomment %}

{%- assign bg_type = section.settings.background_type | default: 'color' -%}
{%- assign bg_color = section.settings.background_color | default: '#1A1A1A' -%}
{%- assign bg_image = section.settings.background_image -%}

{%- assign blog_handle = section.settings.blog -%}
{%- assign posts_limit = section.settings.posts_to_show | default: 2 -%}
{%- assign blog_articles = blank -%}
{%- if blog_handle != blank and blogs[blog_handle] != blank -%}
  {%- assign blog_articles = blogs[blog_handle].articles -%}
{%- endif -%}

<section
  class="journal-posts-section"
  data-section-id="{{ section.id }}"
  style="
    {%- if bg_type == 'color' -%}
      background-color: {{ bg_color }};
    {%- elsif bg_type == 'image' and bg_image != blank -%}
      background-image: url({{ bg_image | image_url: width: 1920 }});
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {%- else -%}
      background-color: {{ bg_color }};
    {%- endif -%}
  "
>
  {%- if bg_type == 'image' and bg_image != blank -%}
    <div class="journal-posts-section__overlay" aria-hidden="true"></div>
  {%- endif -%}

  <div class="journal-posts-section__inner">
    {%- if section.settings.heading != blank -%}
      <h2 class="journal-posts-section__title">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if blog_articles != blank and blog_articles.size > 0 -%}
      <div class="journal-posts-section__grid">
        {%- for article in blog_articles limit: posts_limit -%}
          <a href="{{ article.url }}" class="journal-posts-section__card">
            <div class="journal-posts-section__image-wrap">
              {%- if article.image != blank -%}
                <img
                  src="{{ article.image | image_url: width: 800 }}"
                  alt="{{ article.image.alt | default: article.title | escape }}"
                  class="journal-posts-section__image"
                  width="800"
                  height="400"
                  loading="lazy"
                >
              {%- else -%}
                <div class="journal-posts-section__placeholder">{{ 'image' | placeholder_svg_tag: 'journal-posts-section__placeholder-svg' }}</div>
              {%- endif -%}
            </div>
            {%- if article.tags.size > 0 -%}
              <span class="journal-posts-section__category">{{ article.tags.first }}</span>
            {%- endif -%}
            {%- if article.title != blank -%}
              <h3 class="journal-posts-section__card-title">{{ article.title }}</h3>
            {%- endif -%}
          </a>
        {%- endfor -%}
      </div>
    {%- else -%}
      <p class="journal-posts-section__empty">No articles yet.</p>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Journal posts",
  "tag": "section",
  "class": "journal-posts-section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Section background"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Background type",
      "default": "color",
      "options": [
        { "value": "color", "label": "Color" },
        { "value": "image", "label": "Image" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#1A1A1A"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Used when Background type is Image. A dark overlay is applied for text readability."
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "From the Journal"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog",
      "info": "Articles are shown from this blog."
    },
    {
      "type": "range",
      "id": "posts_to_show",
      "label": "Posts to show",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "Journal posts",
      "settings": {
        "heading": "From the Journal",
        "posts_to_show": 2
      }
    }
  ]
}
{% endschema %}
