<div class="about-values section page-width" style="padding: 4rem 0;">
  {% if section.settings.heading != blank %}
    <h2 class="about-values__heading" style="text-align: center; font-size: 2rem; margin: 0 0 2rem;">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="about-values__grid" style="display: grid; gap: 2rem; grid-template-columns: repeat(auto-fill, minmax(240px, 1fr)); text-align: center;">
    {% for block in section.blocks %}
      {% if block.type == 'value' %}
        <div class="about-values__item" {{ block.shopify_attributes }}>
          <div class="about-values__icon about-values__icon--{{ block.settings.icon }}" style="width: 64px; height: 64px; margin: 0 auto 1rem; border-radius: 50%; background: rgba(217, 119, 6, 0.15); display: flex; align-items: center; justify-content: center; font-size: 1.5rem;" aria-hidden="true">
            {% case block.settings.icon %}
              {% when 'mountain' %}‚õ∞Ô∏è
              {% when 'heart' %}‚ù§Ô∏è
              {% when 'person' %}üë§
              {% when 'leaf' %}üçÉ
              {% else %}‚Ä¢
            {% endcase %}
          </div>
          {% if block.settings.title != blank %}
            <h3 class="about-values__title" style="font-size: 1.125rem; margin: 0 0 0.5rem;">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p class="about-values__description" style="margin: 0; font-size: 0.9em; color: var(--color-dark-gray);">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "About values",
  "class": "section-about-values",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "mountain", "label": "Mountain" },
            { "value": "heart", "label": "Heart" },
            { "value": "person", "label": "Person" },
            { "value": "leaf", "label": "Leaf" }
          ],
          "default": "mountain"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ]
}
{% endschema %}
