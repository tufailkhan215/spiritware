<div class="home-showcase-section section page-width" style="padding: 4rem 0;">
  <header class="home-showcase__header" style="display: flex; flex-wrap: wrap; align-items: center; justify-content: space-between; gap: 1rem; margin-bottom: 2rem;">
    <div>
      {% if section.settings.label != blank %}
        <span class="home-showcase__label" style="font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em; color: var(--color-primary);">{{ section.settings.label }}</span>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="home-showcase__heading" style="font-size: 2rem; margin: 0.25rem 0;">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="home-showcase__description" style="margin: 0; color: var(--color-dark-gray);">{{ section.settings.description }}</p>
      {% endif %}
    </div>
    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="button button--primary">{{ section.settings.button_text }}</a>
    {% endif %}
  </header>

  <div class="home-showcase__categories" style="display: grid; gap: 1.5rem; grid-template-columns: repeat(1, 1fr); margin-bottom: 3rem;">
    {% for i in (1..3) %}
      {% assign cat_collection_key = 'category_collection_' | append: i %}
      {% assign cat_title_key = 'category_title_' | append: i %}
      {% assign cat_image_key = 'category_image_' | append: i %}
      {% assign cat_link_key = 'category_link_' | append: i %}
      {% assign cat_collection = section.settings[cat_collection_key] %}
      {% assign cat_title = section.settings[cat_title_key] %}
      {% assign cat_image = section.settings[cat_image_key] %}
      {% assign cat_link = section.settings[cat_link_key] %}
      {% if cat_title != blank or cat_collection != blank %}
        <a href="{{ cat_link | default: cat_collection.url }}" class="home-showcase__category-card" style="display: block; position: relative; border-radius: 1rem; overflow: hidden; min-height: 220px; background: var(--color-light-gray);">
          {% if cat_image != blank %}
            <img src="{{ cat_image | image_url: width: 600 }}" alt="{{ cat_title | default: cat_collection.title | escape }}" style="width: 100%; height: 100%; object-fit: cover;" loading="lazy" />
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          <div style="position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.5), transparent); display: flex; flex-direction: column; justify-content: flex-end; padding: 1.5rem; color: #fff;">
            <span class="home-showcase__category-title" style="font-size: 1.25rem; font-weight: 700;">{{ cat_title | default: cat_collection.title }}</span>
            <span style="font-size: 0.9em;">{{ 'collections.general.shop_now' | t }}</span>
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>

  <div class="home-showcase__products" style="display: grid; gap: 1.5rem; grid-template-columns: repeat(2, 1fr);">
    {% if section.settings.products_collection != blank %}
      {% assign prod_count = section.settings.products_to_show | default: 4 %}
      {% for product in section.settings.products_collection.products limit: prod_count %}
        <div class="home-showcase__product-item">
          {% render 'product-card', product: product %}
        </div>
      {% endfor %}
    {% endif %}
    {% for block in section.blocks %}
      {% if block.type == 'product' and block.settings.product != blank %}
        <div class="home-showcase__product-item" {{ block.shopify_attributes }}>
          {% render 'product-card', product: block.settings.product %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

