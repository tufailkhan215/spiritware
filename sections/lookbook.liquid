{% comment %}
  The Lookbook: section heading + grid of images (3/4 aspect, hover scale).
  Section background: color or image (theme setting).
{% endcomment %}

{%- assign bg_type = section.settings.background_type | default: 'color' -%}
{%- assign bg_color = section.settings.background_color | default: '#faf7f2' -%}
{%- assign bg_image = section.settings.background_image -%}

<section
  class="lookbook-section"
  data-section-id="{{ section.id }}"
  style="
    {%- if bg_type == 'color' -%}
      background-color: {{ bg_color }};
    {%- elsif bg_type == 'image' and bg_image != blank -%}
      background-image: url({{ bg_image | image_url: width: 1920 }});
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {%- else -%}
      background-color: {{ bg_color }};
    {%- endif -%}
  "
>
  {%- if bg_type == 'image' and bg_image != blank -%}
    <div class="lookbook-section__overlay" aria-hidden="true"></div>
  {%- endif -%}

  <div class="lookbook-section__inner">
    {%- if section.settings.heading != blank -%}
      <h2 class="lookbook-section__title">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="lookbook-section__grid">
        {%- for block in section.blocks -%}
          {%- if block.type != 'image' -%}
            {%- continue -%}
          {%- endif -%}
          <div class="lookbook-section__item" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              <img
                src="{{ block.settings.image | image_url: width: 800 }}"
                alt="{{ block.settings.alt | default: block.settings.image.alt | escape }}"
                class="lookbook-section__image"
                width="800"
                height="1067"
                loading="lazy"
              >
            {%- else -%}
              <div class="lookbook-section__placeholder">{{ 'image' | placeholder_svg_tag: 'lookbook-section__placeholder-svg' }}</div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "The Lookbook",
  "tag": "section",
  "class": "lookbook-section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Section background"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Background type",
      "default": "color",
      "options": [
        { "value": "color", "label": "Color" },
        { "value": "image", "label": "Image" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#faf7f2"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Used when Background type is Image. A light overlay is applied."
    },
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Lookbook"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text",
          "info": "Optional. Describe the image for accessibility."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "The Lookbook",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
