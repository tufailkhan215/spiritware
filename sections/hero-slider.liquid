{% schema %}
{
  "name": "Hero Slider",
  "settings": [
    {
      "type": "range",
      "id": "auto_play_delay",
      "label": "Auto-play delay (seconds)",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_dots",
      "label": "Show pagination dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "Show navigation arrows",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Modern Mountain Living"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Home decor & lifestyle goods for your mountain retreat"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="hero-slider" data-auto-play-delay="{{ section.settings.auto_play_delay | times: 1000 }}">
  {%- for block in section.blocks -%}
    <div class="hero-slide {% if forloop.first %}active{% endif %}" {{ block.shopify_attributes }}>
      {%- if block.settings.image != blank -%}
        <img 
          src="{{ block.settings.image | image_url: width: 1920 }}"
          alt="{{ block.settings.heading | escape }}"
          loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
        >
      {%- endif -%}
      
      <div class="hero-content">
        {%- if block.settings.heading != blank -%}
          <h1 class="hero-title">{{ block.settings.heading }}</h1>
        {%- endif -%}
        
        {%- if block.settings.subtitle != blank -%}
          <p class="hero-subtitle">{{ block.settings.subtitle }}</p>
        {%- endif -%}
        
        {%- if block.settings.button_text != blank and block.settings.button_link != blank -%}
          <a href="{{ block.settings.button_link }}" class="btn btn-primary">
            {{ block.settings.button_text }} →
          </a>
        {%- endif -%}
      </div>
    </div>
  {%- endfor -%}

  {%- if section.settings.show_arrows -%}
    <button class="slider-nav prev" aria-label="Previous slide">‹</button>
    <button class="slider-nav next" aria-label="Next slide">›</button>
  {%- endif -%}

  {%- if section.settings.show_dots and section.blocks.size > 1 -%}
    <div class="slider-dots">
      {%- for block in section.blocks -%}
        <button class="slider-dot {% if forloop.first %}active{% endif %}" aria-label="Go to slide {{ forloop.index }}"></button>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>
