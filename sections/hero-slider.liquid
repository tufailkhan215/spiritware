<div class="hero-slider section" data-hero-slider data-auto-play-delay="{{ section.settings.auto_play_delay | default: 5 }}" style="position: relative; overflow: hidden;">
  <div class="hero-slider__slides" data-slides>
    {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        <div class="hero-slider__slide" {{ block.shopify_attributes }} data-slide {% if forloop.first %}data-active{% endif %}>
          <div class="hero-slider__image-wrapper" style="position: relative; min-height: 400px; background: var(--color-light-gray);">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 1920 }}"
                alt="{{ block.settings.heading | escape }}"
                class="hero-slider__image"
                width="1920"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                style="width: 100%; height: 100%; object-fit: cover;"
              />
            {% else %}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            <div class="hero-slider__content page-width" style="position: absolute; inset: 0; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center; color: #fff; text-shadow: 0 1px 2px rgba(0,0,0,0.5); padding: 2rem;">
              {% if block.settings.heading != blank %}
                <h2 class="hero-slider__heading" style="font-size: 2.5rem; margin: 0 0 0.5rem;">{{ block.settings.heading }}</h2>
              {% endif %}
              {% if block.settings.subtitle != blank %}
                <p class="hero-slider__subtitle" style="font-size: 1.2rem; margin: 0 0 1.5rem;">{{ block.settings.subtitle }}</p>
              {% endif %}
              {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                <a href="{{ block.settings.button_link }}" class="button button--primary">{{ block.settings.button_text }}</a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  {% if section.settings.show_arrows and section.blocks.size > 1 %}
    <button type="button" class="hero-slider__arrow hero-slider__arrow--prev" data-slider-prev aria-label="{{ 'general.accessibility.previous' | t }}">‹</button>
    <button type="button" class="hero-slider__arrow hero-slider__arrow--next" data-slider-next aria-label="{{ 'general.accessibility.next' | t }}">›</button>
  {% endif %}
  {% if section.settings.show_dots and section.blocks.size > 1 %}
    <div class="hero-slider__dots" data-slider-dots style="position: absolute; bottom: 1rem; left: 50%; transform: translateX(-50%); display: flex; gap: 0.5rem;">
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <button type="button" class="hero-slider__dot {% if forloop.first %}active{% endif %}" data-dot-index="{{ forloop.index0 }}" aria-label="{{ 'general.accessibility.slide' | t: current: forloop.index, total: section.blocks.size }}"></button>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Hero slider",
  "class": "section-hero-slider",
  "settings": [
    {
      "type": "range",
      "id": "auto_play_delay",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Auto-play delay",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_dots",
      "label": "Show dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "Show arrows",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero slider",
      "blocks": [
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
