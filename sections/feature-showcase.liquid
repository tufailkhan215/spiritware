<div class="feature-showcase section page-width" style="padding: 4rem 0;">
  {% for block in section.blocks %}
    {% if block.type == 'feature' %}
      <div class="feature-showcase__block feature-showcase__block--{{ block.settings.layout }}" {{ block.shopify_attributes }} style="display: grid; gap: 2rem; margin-bottom: 4rem; grid-template-columns: 1fr;">
        {% if block.settings.layout == 'left' %}
          <div class="feature-showcase__image-wrapper" style="position: relative; border-radius: 1rem; overflow: hidden; background: var(--color-light-gray);">
            {% if block.settings.main_image != blank %}
              <img src="{{ block.settings.main_image | image_url: width: 800 }}" alt="{{ block.settings.heading | escape }}" style="width: 100%; height: auto; display: block;" loading="lazy" />
            {% else %}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.settings.badge_text != blank %}
              <span class="feature-showcase__badge" style="position: absolute; bottom: 1rem; right: 1rem; background: var(--color-primary); color: #fff; padding: 0.5rem 1rem; border-radius: 9999px; font-size: 0.875rem;">{{ block.settings.badge_text }}</span>
            {% endif %}
            {% if block.settings.thumbnail_image != blank %}
              <div class="feature-showcase__thumbnail" style="position: absolute; bottom: 1rem; left: 1rem; width: 80px; height: 80px; border-radius: 0.5rem; overflow: hidden; border: 3px solid #fff; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                <img src="{{ block.settings.thumbnail_image | image_url: width: 160 }}" alt="" width="80" height="80" loading="lazy" />
              </div>
            {% endif %}
          </div>
          <div class="feature-showcase__content">
            {% if block.settings.label != blank %}
              <span class="feature-showcase__label" style="font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em; color: var(--color-primary);">{{ block.settings.label }}</span>
            {% endif %}
            {% if block.settings.heading != blank %}
              <h2 class="feature-showcase__heading" style="font-size: 2rem; margin: 0.5rem 0 1rem;">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.description != blank %}
              <p class="feature-showcase__description" style="margin: 0 0 1rem;">{{ block.settings.description }}</p>
            {% endif %}
            {% if block.settings.price != blank %}
              <p class="feature-showcase__price" style="font-size: 1.25rem; font-weight: 700; margin: 0 0 1rem;">{{ block.settings.price }}</p>
            {% endif %}
            {% if block.settings.show_sizes %}
              <div class="feature-showcase__sizes" style="display: flex; gap: 0.5rem; margin-bottom: 1rem; flex-wrap: wrap;">
                <span class="feature-showcase__size" style="padding: 0.25rem 0.75rem; border: 1px solid var(--color-dark-gray); border-radius: 9999px; font-size: 0.875rem;">S</span>
                <span class="feature-showcase__size" style="padding: 0.25rem 0.75rem; border: 1px solid var(--color-dark-gray); border-radius: 9999px; font-size: 0.875rem;">M</span>
                <span class="feature-showcase__size" style="padding: 0.25rem 0.75rem; border: 1px solid var(--color-dark-gray); border-radius: 9999px; font-size: 0.875rem;">L</span>
                <span class="feature-showcase__size" style="padding: 0.25rem 0.75rem; border: 1px solid var(--color-dark-gray); border-radius: 9999px; font-size: 0.875rem;">XL</span>
              </div>
            {% endif %}
            {% if block.settings.button_text != blank and block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="button {% if block.settings.button_style == 'outline' %}button--outline{% else %}button--primary{% endif %}">{{ block.settings.button_text }}</a>
            {% endif %}
          </div>
        {% else %}
          <div class="feature-showcase__content">
            {% if block.settings.label != blank %}
              <span class="feature-showcase__label" style="font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em; color: var(--color-primary);">{{ block.settings.label }}</span>
            {% endif %}
            {% if block.settings.heading != blank %}
              <h2 class="feature-showcase__heading" style="font-size: 2rem; margin: 0.5rem 0 1rem;">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.description != blank %}
              <p class="feature-showcase__description" style="margin: 0 0 1rem;">{{ block.settings.description }}</p>
            {% endif %}
            <ul class="feature-showcase__list" style="list-style: none; padding: 0; margin: 0 0 1rem;">
              {% if block.settings.list_item_1 != blank %}<li style="margin-bottom: 0.5rem;">{{ block.settings.list_item_1 }}</li>{% endif %}
              {% if block.settings.list_item_2 != blank %}<li style="margin-bottom: 0.5rem;">{{ block.settings.list_item_2 }}</li>{% endif %}
              {% if block.settings.list_item_3 != blank %}<li style="margin-bottom: 0.5rem;">{{ block.settings.list_item_3 }}</li>{% endif %}
              {% if block.settings.list_item_4 != blank %}<li style="margin-bottom: 0.5rem;">{{ block.settings.list_item_4 }}</li>{% endif %}
            </ul>
            {% if block.settings.button_text != blank and block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="button button--outline">{{ block.settings.button_text }}</a>
            {% endif %}
          </div>
          <div class="feature-showcase__image-wrapper" style="border-radius: 1rem; overflow: hidden; background: var(--color-light-gray);">
            {% if block.settings.main_image != blank %}
              <img src="{{ block.settings.main_image | image_url: width: 800 }}" alt="{{ block.settings.heading | escape }}" style="width: 100%; height: auto; display: block;" loading="lazy" />
            {% else %}
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Feature showcase",
  "class": "section-feature-showcase",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "layout",
          "label": "Layout",
          "options": [
            { "value": "left", "label": "Image left" },
            { "value": "right", "label": "Image right" }
          ],
          "default": "left"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Main image"
        },
        {
          "type": "image_picker",
          "id": "thumbnail_image",
          "label": "Thumbnail image (left layout)"
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "Badge text"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price"
        },
        {
          "type": "checkbox",
          "id": "show_sizes",
          "label": "Show sizes",
          "default": false
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "outline", "label": "Outline" }
          ],
          "default": "primary"
        },
        {
          "type": "text",
          "id": "list_item_1",
          "label": "List item 1 (right layout)"
        },
        {
          "type": "text",
          "id": "list_item_2",
          "label": "List item 2"
        },
        {
          "type": "text",
          "id": "list_item_3",
          "label": "List item 3"
        },
        {
          "type": "text",
          "id": "list_item_4",
          "label": "List item 4"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature showcase",
      "blocks": [{ "type": "feature" }]
    }
  ]
}
{% endschema %}
