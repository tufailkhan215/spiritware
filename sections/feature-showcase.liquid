{% schema %}
{
  "name": "Feature Showcase",
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "select",
          "id": "layout",
          "label": "Layout",
          "options": [
            {
              "value": "left",
              "label": "Image Left, Content Right"
            },
            {
              "value": "right",
              "label": "Image Right, Content Left"
            }
          ],
          "default": "left"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Discover 89 Classics"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "It's Hoodie Season"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "This Product is a Staple of the California 89 Brand. Been on the floor since day 1 in 2012, this product continues to be one of our best sellers."
        },
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Main Image"
        },
        {
          "type": "image_picker",
          "id": "thumbnail_image",
          "label": "Thumbnail Image (optional)",
          "info": "Small image that appears as overlay (only for left layout)"
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "Badge Text",
          "default": "Best Seller",
          "info": "Leave empty to hide badge"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "$60.00"
        },
        {
          "type": "checkbox",
          "id": "show_sizes",
          "label": "Show Size Options",
          "default": true
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Hoodies"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "options": [
            {
              "value": "primary",
              "label": "Primary (Amber)"
            },
            {
              "value": "outline",
              "label": "Outline (Border)"
            }
          ],
          "default": "primary"
        },
        {
          "type": "header",
          "content": "List Items (for right layout)"
        },
        {
          "type": "text",
          "id": "list_item_1",
          "label": "List Item 1"
        },
        {
          "type": "text",
          "id": "list_item_2",
          "label": "List Item 2"
        },
        {
          "type": "text",
          "id": "list_item_3",
          "label": "List Item 3"
        },
        {
          "type": "text",
          "id": "list_item_4",
          "label": "List Item 4"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Showcase",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "layout": "left",
            "label": "Discover 89 Classics",
            "heading": "It's Hoodie Season",
            "description": "This Product is a Staple of the California 89 Brand. Been on the floor since day 1 in 2012, this product continues to be one of our best sellers. Our Classic Hoodie will be your go-to favorite for any occasion.",
            "badge_text": "Best Seller",
            "price": "$60.00",
            "show_sizes": true,
            "button_text": "Shop Hoodies",
            "button_style": "primary"
          }
        },
        {
          "type": "feature",
          "settings": {
            "layout": "right",
            "label": "CA89 Home",
            "heading": "Modern Mountain Living",
            "description": "Embrace the beauty of nature with our thoughtfully curated furniture and home decor. From handcrafted bowls and boards to modern glassware, discover the pieces that make hosting feel effortless and your home feel like a mountain retreat.",
            "list_item_1": "Furniture & Seating",
            "list_item_2": "Vases & Planters",
            "list_item_3": "Kitchen & Bar",
            "list_item_4": "Blankets & Throws",
            "button_text": "Explore Home Decor",
            "button_style": "outline"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="feature-showcase-section">
  <div class="feature-showcase-container">
    {%- for block in section.blocks -%}
      <div class="feature-showcase-block{% if block.settings.layout == 'right' %} feature-showcase-block-reverse{% endif %}" {{ block.shopify_attributes }}>
        <div class="feature-showcase-image-wrapper">
          <div class="feature-showcase-image-container">
            {%- if block.settings.main_image != blank -%}
              <img 
                src="{{ block.settings.main_image | image_url: width: 1200 }}" 
                alt="{{ block.settings.heading }}" 
                class="feature-showcase-main-image"
                loading="lazy"
              >
            {%- else -%}
              <div class="feature-showcase-placeholder">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}
            
            {%- if block.settings.badge_text != blank and block.settings.layout == 'left' -%}
              <div class="feature-showcase-badge">
                <span>{{ block.settings.badge_text }}</span>
              </div>
            {%- endif -%}
          </div>
          
          {%- if block.settings.thumbnail_image != blank and block.settings.layout == 'left' -%}
            <div class="feature-showcase-thumbnail">
              <img 
                src="{{ block.settings.thumbnail_image | image_url: width: 400 }}" 
                alt="{{ block.settings.heading }} thumbnail"
                loading="lazy"
              >
            </div>
          {%- endif -%}
          
          {%- if block.settings.layout == 'right' -%}
            <div class="feature-showcase-decorative feature-showcase-decorative-top"></div>
            <div class="feature-showcase-decorative feature-showcase-decorative-bottom"></div>
          {%- endif -%}
        </div>
        
        <div class="feature-showcase-content">
          {%- if block.settings.label != blank -%}
            <span class="feature-showcase-label">{{ block.settings.label }}</span>
          {%- endif -%}
          
          {%- if block.settings.heading != blank -%}
            <h2 class="feature-showcase-heading">{{ block.settings.heading }}</h2>
          {%- endif -%}
          
          {%- if block.settings.description != blank -%}
            <p class="feature-showcase-description">{{ block.settings.description }}</p>
          {%- endif -%}
          
          {%- if block.settings.price != blank and block.settings.layout == 'left' -%}
            <div class="feature-showcase-price-row">
              <span class="feature-showcase-price">{{ block.settings.price }}</span>
              {%- if block.settings.show_sizes -%}
                <div class="feature-showcase-sizes">
                  <span class="feature-showcase-size">XS</span>
                  <span class="feature-showcase-size">S</span>
                  <span class="feature-showcase-size">M</span>
                  <span class="feature-showcase-size">L</span>
                  <span class="feature-showcase-size">XL</span>
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}
          
          {%- if block.settings.list_item_1 != blank or block.settings.list_item_2 != blank or block.settings.list_item_3 != blank or block.settings.list_item_4 != blank -%}
            <ul class="feature-showcase-list">
              {%- if block.settings.list_item_1 != blank -%}
                <li class="feature-showcase-list-item">
                  <span class="feature-showcase-list-bullet"></span>
                  {{ block.settings.list_item_1 }}
                </li>
              {%- endif -%}
              {%- if block.settings.list_item_2 != blank -%}
                <li class="feature-showcase-list-item">
                  <span class="feature-showcase-list-bullet"></span>
                  {{ block.settings.list_item_2 }}
                </li>
              {%- endif -%}
              {%- if block.settings.list_item_3 != blank -%}
                <li class="feature-showcase-list-item">
                  <span class="feature-showcase-list-bullet"></span>
                  {{ block.settings.list_item_3 }}
                </li>
              {%- endif -%}
              {%- if block.settings.list_item_4 != blank -%}
                <li class="feature-showcase-list-item">
                  <span class="feature-showcase-list-bullet"></span>
                  {{ block.settings.list_item_4 }}
                </li>
              {%- endif -%}
            </ul>
          {%- endif -%}
          
          {%- if block.settings.button_text != blank -%}
            <a 
              href="{{ block.settings.button_link | default: '#' }}" 
              class="feature-showcase-button feature-showcase-button-{{ block.settings.button_style }}"
            >
              {{ block.settings.button_text }}
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feature-showcase-arrow" aria-hidden="true">
                <path d="M5 12h14"></path>
                <path d="m12 5 7 7-7 7"></path>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</section>
