{% schema %}
{
  "name": "Shop by Category",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Explore"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "From cozy apparel to modern home decor, find everything you need for mountain living."
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Apparel"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Everyday apparel for mountain life"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "checkbox",
          "id": "large_card",
          "label": "Large card (spans 2 rows)",
          "default": false,
          "info": "Only the first card should be large"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Category",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Apparel",
            "description": "Everyday apparel for mountain life",
            "large_card": true
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Home Decor",
            "description": "Modern mountain living essentials"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Drinkware",
            "description": "Mugs, glasses & tumblers"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Kitchen & Bar",
            "description": "Serve in style"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="category-showcase-section">
  <div class="category-showcase-container">
    <div class="category-showcase-header">
      {%- if section.settings.label != blank -%}
        <span class="category-showcase-label">{{ section.settings.label }}</span>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="category-showcase-title">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <p class="category-showcase-description">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>
    <div class="category-showcase-grid">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link | default: '#' }}" class="category-showcase-card{% if block.settings.large_card %} category-showcase-card-large{% endif %}" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div class="category-showcase-image" style="background-image: url('{{ block.settings.image | image_url: width: 1200 }}');"></div>
          {%- endif -%}
          <div class="category-showcase-overlay"></div>
          <div class="category-showcase-content">
            <h3 class="category-showcase-card-title">{{ block.settings.title }}</h3>
            {%- if block.settings.description != blank -%}
              <p class="category-showcase-card-description">{{ block.settings.description }}</p>
            {%- endif -%}
            <span class="category-showcase-cta">
              Shop Now
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="category-showcase-arrow" aria-hidden="true">
                <path d="M5 12h14"></path>
                <path d="m12 5 7 7-7 7"></path>
              </svg>
            </span>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>
