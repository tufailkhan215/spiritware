{% comment %}
  Ethos 1 — Dark section: subheading, heading, intro, grid of principle cards (icon, title, description).
  Generic: works with any header. Design: #1A1A1A, #FAF7F2, #C4A77D.
{% endcomment %}

<section class="ethos-1" id="{{ section.settings.section_id | default: 'ethos' }}" aria-label="Our Ethos">
  <div class="ethos-1__line ethos-1__line--top" aria-hidden="true"></div>
  <div class="ethos-1__line ethos-1__line--bottom" aria-hidden="true"></div>

  <div class="ethos-1__container">
    <div class="ethos-1__header">
      {%- if section.settings.subheading != blank -%}
        <span class="ethos-1__subheading">{{ section.settings.subheading | escape }}</span>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="ethos-1__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}
      {%- if section.settings.intro != blank -%}
        <p class="ethos-1__intro">{{ section.settings.intro | escape }}</p>
      {%- endif -%}
    </div>

    <div class="ethos-1__grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'principle' -%}
          <div class="ethos-1__card" {{ block.shopify_attributes }}>
            <div class="ethos-1__card-icon-wrap">
              {%- case block.settings.icon -%}
                {%- when 'leaf' -%}
                  <svg class="ethos-1__card-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"/><path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"/></svg>
                {%- when 'sparkles' -%}
                  <svg class="ethos-1__card-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"/><path d="M20 3v4"/><path d="M22 5h-4"/><path d="M4 17v2"/><path d="M5 18H3"/></svg>
                {%- when 'flame' -%}
                  <svg class="ethos-1__card-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 1 1-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 0 0 2.5 2.5z"/></svg>
                {%- when 'heart' -%}
                  <svg class="ethos-1__card-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
                {%- else -%}
                  <svg class="ethos-1__card-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="10"/></svg>
              {%- endcase -%}
            </div>
            {%- if block.settings.title != blank -%}
              <h3 class="ethos-1__card-title">{{ block.settings.title | escape }}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="ethos-1__card-desc">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Ethos 1",
  "tag": "section",
  "class": "section-ethos-1",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID (for anchor links)",
      "default": "ethos",
      "info": "Use 'ethos' to link with #ethos from navigation."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "What We Stand For"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Ethos"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro paragraph",
      "default": "Every piece we create is an embodiment of these sacred principles."
    }
  ],
  "blocks": [
    {
      "type": "principle",
      "name": "Principle",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "leaf", "label": "Leaf" },
            { "value": "sparkles", "label": "Sparkles" },
            { "value": "flame", "label": "Flame" },
            { "value": "heart", "label": "Heart" }
          ],
          "default": "leaf"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ethos 1",
      "blocks": [
        {
          "type": "principle",
          "settings": {
            "icon": "leaf",
            "title": "Conscious Creation",
            "description": "Every garment is woven with organic threads, recycled fabrics, and naturally dyed materials. We honor Pacha Mama in every stitch."
          }
        },
        {
          "type": "principle",
          "settings": {
            "icon": "sparkles",
            "title": "Wearable Prayers",
            "description": "Each piece is infused with intention—poems, prayers, and passages designed to spark self-awareness and embody your highest truth."
          }
        },
        {
          "type": "principle",
          "settings": {
            "icon": "flame",
            "title": "Radical Authenticity",
            "description": "We celebrate the full spectrum—holy and wild, raw and refined, rebellious and reverent. No suppression, only expression."
          }
        },
        {
          "type": "principle",
          "settings": {
            "icon": "heart",
            "title": "Ethical by Design",
            "description": "Partnering with certified ethical manufacturers, we ensure fair wages, safe conditions, and sustainable practices throughout our supply chain."
          }
        }
      ]
    }
  ]
}
{% endschema %}
