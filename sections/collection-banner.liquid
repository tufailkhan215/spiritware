<div class="collection-banner" style="margin-bottom: 2rem;">
  <div class="collection-banner__inner page-width" style="padding: 2rem 0;">
    <h1 class="collection-banner__title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-banner__description rte">{{ collection.description }}</div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Collection banner",
  "class": "section-collection-banner",
  "settings": []
}
{% endschema %}
