{% comment %}
  Community Testimonials 1 — Carousel: subheading, heading, testimonial slides (image, quote, name, location), prev/next, dots.
  Generic: works with any header. Design: #FAF7F2, #1A1A1A, #C4A77D, #EDE8E0.
{% endcomment %}

<section class="community-testimonials-1" id="{{ section.settings.section_id | default: 'community' }}" aria-label="Community Voices" data-section-id="{{ section.id }}">
  <div class="community-testimonials-1__container">
    <div class="community-testimonials-1__header">
      {%- if section.settings.subheading != blank -%}
        <span class="community-testimonials-1__subheading">{{ section.settings.subheading | escape }}</span>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="community-testimonials-1__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="community-testimonials-1__slider" data-testimonials-slider>
        <div class="community-testimonials-1__slides">
          {%- for block in section.blocks -%}
            {%- if block.type == 'testimonial' -%}
              <div class="community-testimonials-1__slide {% if forloop.first %}community-testimonials-1__slide--active{% endif %}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
                <div class="community-testimonials-1__grid">
                  <div class="community-testimonials-1__media">
                    {%- if block.settings.image != blank -%}
                      <div class="community-testimonials-1__image-wrap">
                        <img
                          class="community-testimonials-1__image"
                          src="{{ block.settings.image | image_url: width: 600 }}"
                          alt="{{ block.settings.name | default: 'Testimonial' | escape }}"
                          width="600"
                          height="600"
                          loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                        >
                      </div>
                    {%- else -%}
                      <div class="community-testimonials-1__image-placeholder"></div>
                    {%- endif -%}
                    <div class="community-testimonials-1__quote-icon" aria-hidden="true">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 3a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2 1 1 0 0 1 1 1v1a2 2 0 0 1-2 2 1 1 0 0 0-1 1v2a1 1 0 0 0 1 1 6 6 0 0 0 6-6V5a2 2 0 0 0-2-2z"/><path d="M5 3a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2 1 1 0 0 1 1 1v1a2 2 0 0 1-2 2 1 1 0 0 0-1 1v2a1 1 0 0 0 1 1 6 6 0 0 0 6-6V5a2 2 0 0 0-2-2z"/></svg>
                    </div>
                  </div>
                  <div class="community-testimonials-1__content">
                    {%- if block.settings.quote != blank -%}
                      <p class="community-testimonials-1__quote">{{ block.settings.quote }}</p>
                    {%- endif -%}
                    <div class="community-testimonials-1__attribution">
                      {%- if block.settings.name != blank -%}
                        <p class="community-testimonials-1__name">{{ block.settings.name | escape }}</p>
                      {%- endif -%}
                      {%- if block.settings.location != blank -%}
                        <p class="community-testimonials-1__location">{{ block.settings.location | escape }}</p>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

        <div class="community-testimonials-1__nav">
          <button type="button" class="community-testimonials-1__btn community-testimonials-1__btn--prev" aria-label="Previous testimonial">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="m15 18-6-6 6-6"/></svg>
          </button>
          <div class="community-testimonials-1__dots" role="tablist" aria-label="Testimonial navigation">
            {%- for block in section.blocks -%}
              {%- if block.type == 'testimonial' -%}
                <button type="button" class="community-testimonials-1__dot {% if forloop.first %}community-testimonials-1__dot--active{% endif %}" role="tab" aria-label="Go to testimonial {{ forloop.index }}" data-dot-index="{{ forloop.index0 }}" aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"></button>
              {%- endif -%}
            {%- endfor -%}
          </div>
          <button type="button" class="community-testimonials-1__btn community-testimonials-1__btn--next" aria-label="Next testimonial">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="m9 18 6-6-6-6"/></svg>
          </button>
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

<script>
(function() {
  var sectionId = '{{ section.id }}';
  var section = document.querySelector('.community-testimonials-1[data-section-id="' + sectionId + '"]');
  if (!section) return;
  var slider = section.querySelector('[data-testimonials-slider]');
  if (!slider) return;
  var slides = slider.querySelectorAll('.community-testimonials-1__slide');
  var dots = slider.querySelectorAll('.community-testimonials-1__dot');
  var prevBtn = slider.querySelector('.community-testimonials-1__btn--prev');
  var nextBtn = slider.querySelector('.community-testimonials-1__btn--next');
  if (slides.length === 0) return;
  var current = 0;
  function goTo(i) {
    if (i < 0) i = slides.length - 1;
    if (i >= slides.length) i = 0;
    current = i;
    slides.forEach(function(s, j) {
      s.classList.toggle('community-testimonials-1__slide--active', j === current);
    });
    dots.forEach(function(d, j) {
      d.classList.toggle('community-testimonials-1__dot--active', j === current);
      d.setAttribute('aria-selected', j === current ? 'true' : 'false');
    });
  }
  if (prevBtn) prevBtn.addEventListener('click', function() { goTo(current - 1); });
  if (nextBtn) nextBtn.addEventListener('click', function() { goTo(current + 1); });
  dots.forEach(function(dot, i) {
    dot.addEventListener('click', function() { goTo(i); });
  });
})();
</script>

