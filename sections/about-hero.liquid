{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "So much more than a Sierra Highway, it's a way of life!"
    }
  ],
  "presets": [
    {
      "name": "About Hero"
    }
  ]
}
{% endschema %}

<div class="about-hero">
  {%- if section.settings.background_image != blank -%}
    <div class="about-hero-image">
      <img 
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        alt="{{ section.settings.heading | escape }}"
        loading="eager"
      >
    </div>
  {%- endif -%}
  
  <div class="about-hero-content">
    {%- if section.settings.heading != blank -%}
      <h1 class="about-hero-title">{{ section.settings.heading }}</h1>
    {%- endif -%}
    
    {%- if section.settings.subtitle != blank -%}
      <p class="about-hero-subtitle">{{ section.settings.subtitle }}</p>
    {%- endif -%}
  </div>
</div>
