<div class="about-hero section" style="position: relative; min-height: 400px; display: flex; align-items: center; justify-content: center; text-align: center; color: #fff; background: var(--color-dark-gray);">
  {% if section.settings.background_image != blank %}
    <img src="{{ section.settings.background_image | image_url: width: 1920 }}" alt="" class="about-hero__bg" style="position: absolute; inset: 0; width: 100%; height: 100%; object-fit: cover; z-index: 0;" loading="eager" />
  {% endif %}
  <div class="about-hero__overlay" style="position: absolute; inset: 0; background: rgba(0,0,0,0.4); z-index: 1;"></div>
  <div class="about-hero__content page-width" style="position: relative; z-index: 2; padding: 4rem 2rem;">
    {% if section.settings.heading != blank %}
      <h1 class="about-hero__heading" style="font-size: 3rem; margin: 0 0 0.5rem;">{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="about-hero__subtitle" style="font-size: 1.25rem; margin: 0; opacity: 0.9;">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "About hero",
  "class": "section-about-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ]
}
{% endschema %}
