{% schema %}
{
  "name": "Instagram Feed",
  "settings": [
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram Handle",
      "default": "@cahwy89"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow Us on Instagram"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Join our community of over 12K followers and share your California 89 moments with us."
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "like_count",
          "label": "Like Count (optional)",
          "default": "245",
          "info": "Displayed on hover"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "blocks": [
        {
          "type": "image",
          "settings": {
            "like_count": "245"
          }
        },
        {
          "type": "image",
          "settings": {
            "like_count": "189"
          }
        },
        {
          "type": "image",
          "settings": {
            "like_count": "312"
          }
        },
        {
          "type": "image",
          "settings": {
            "like_count": "267"
          }
        },
        {
          "type": "image",
          "settings": {
            "like_count": "198"
          }
        },
        {
          "type": "image",
          "settings": {
            "like_count": "421"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="instagram-feed-section">
  <div class="instagram-feed-container">
    <div class="instagram-feed-header">
      {%- if section.settings.instagram_handle != blank -%}
        <div class="instagram-feed-handle">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="instagram-feed-icon" aria-hidden="true">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
          </svg>
          <span class="instagram-feed-handle-text">{{ section.settings.instagram_handle }}</span>
        </div>
      {%- endif -%}
      
      {%- if section.settings.heading != blank -%}
        <h2 class="instagram-feed-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <p class="instagram-feed-description">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>
    
    <div class="instagram-feed-grid">
      {%- for block in section.blocks -%}
        {%- if block.settings.image != blank -%}
          <a 
            href="{{ block.settings.link | default: section.settings.instagram_url | default: '#' }}" 
            class="instagram-feed-item" 
            target="_blank" 
            rel="noopener noreferrer"
            {{ block.shopify_attributes }}
          >
            <img 
              src="{{ block.settings.image | image_url: width: 600 }}" 
              alt="Instagram post" 
              class="instagram-feed-image"
              loading="lazy"
            >
            <div class="instagram-feed-overlay">
              {%- if block.settings.like_count != blank -%}
                <div class="instagram-feed-likes">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="instagram-feed-heart" aria-hidden="true">
                    <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"></path>
                  </svg>
                  <span class="instagram-feed-like-count">{{ block.settings.like_count }}</span>
                </div>
              {%- endif -%}
            </div>
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
    
    {%- if section.settings.instagram_url != blank -%}
      <div class="instagram-feed-cta">
        <a 
          href="{{ section.settings.instagram_url }}" 
          class="instagram-feed-button"
          target="_blank" 
          rel="noopener noreferrer"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="instagram-feed-button-icon" aria-hidden="true">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
          </svg>
          Follow {{ section.settings.instagram_handle }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

