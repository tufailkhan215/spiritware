{% comment %}
  Footer 1 (Sacred Rebel) — Dark charcoal, cream text, accent gold.
  Per SACRED_REBEL_HOMEPAGE_PROMPT.md §10. Theme setting: footer_style = 'footer_1'.
{% endcomment %}

<footer class="footer-1" role="contentinfo">
  <div class="footer-1__newsletter-wrap">
    <div class="footer-1__container">
      <div class="footer-1__newsletter">
        <div class="footer-1__newsletter-content">
          {%- if section.settings.newsletter_heading != blank -%}
            <h3 class="footer-1__newsletter-heading">{{ section.settings.newsletter_heading }}</h3>
          {%- endif -%}
          {%- if section.settings.newsletter_description != blank -%}
            <p class="footer-1__newsletter-desc">{{ section.settings.newsletter_description }}</p>
          {%- endif -%}
        </div>
        <div class="footer-1__newsletter-form-wrap">
          {% form 'customer', class: 'footer-1__form' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input
              type="email"
              name="contact[email]"
              class="footer-1__input"
              placeholder="{{ section.settings.newsletter_placeholder | default: 'Enter your email' }}"
              aria-label="{{ 'newsletter.label' | t | default: 'Email' }}"
              required
            >
            <button type="submit" class="footer-1__submit" aria-label="{{ 'newsletter.button_label' | t | default: 'Subscribe' }}">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="footer-1__submit-icon" aria-hidden="true"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>

  <div class="footer-1__main-wrap">
    <div class="footer-1__container">
      <div class="footer-1__grid">
        <div class="footer-1__brand footer-1__col-brand">
          <a href="{{ routes.root_url }}" class="footer-1__brand-name">{{ section.settings.brand_name | default: shop.name }}</a>
          {%- if section.settings.brand_tagline != blank -%}
            <p class="footer-1__brand-tagline">{{ section.settings.brand_tagline }}</p>
          {%- endif -%}
          <div class="footer-1__social">
            {%- if section.settings.instagram_url != blank -%}
              <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="footer-1__social-link" aria-label="Instagram">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
              </a>
            {%- endif -%}
            {%- if section.settings.tiktok_url != blank -%}
              <a href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener noreferrer" class="footer-1__social-link" aria-label="TikTok">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>
              </a>
            {%- endif -%}
          </div>
        </div>

        {%- if section.settings.shop_menu != blank and linklists[section.settings.shop_menu].links.size > 0 -%}
          <div class="footer-1__col">
            <h4 class="footer-1__col-heading">{{ linklists[section.settings.shop_menu].title | default: 'Shop' }}</h4>
            <ul class="footer-1__links">
              {%- for link in linklists[section.settings.shop_menu].links -%}
                <li><a href="{{ link.url }}" class="footer-1__link">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        {%- if section.settings.company_menu != blank and linklists[section.settings.company_menu].links.size > 0 -%}
          <div class="footer-1__col">
            <h4 class="footer-1__col-heading">{{ linklists[section.settings.company_menu].title | default: 'Company' }}</h4>
            <ul class="footer-1__links">
              {%- for link in linklists[section.settings.company_menu].links -%}
                <li><a href="{{ link.url }}" class="footer-1__link">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        {%- if section.settings.support_menu != blank and linklists[section.settings.support_menu].links.size > 0 -%}
          <div class="footer-1__col">
            <h4 class="footer-1__col-heading">{{ linklists[section.settings.support_menu].title | default: 'Support' }}</h4>
            <ul class="footer-1__links">
              {%- for link in linklists[section.settings.support_menu].links -%}
                <li><a href="{{ link.url }}" class="footer-1__link">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>

      <div class="footer-1__bottom">
        <p class="footer-1__copyright">© {{ 'now' | date: '%Y' }} {{ section.settings.copyright | default: 'Sacred Rebel. All rights reserved.' }}</p>
        <div class="footer-1__legal">
          <a href="/policies/privacy-policy" class="footer-1__legal-link">{{ 'footer.privacy_policy' | t | default: 'Privacy Policy' }}</a>
          <a href="/policies/terms-of-service" class="footer-1__legal-link">{{ 'footer.terms_of_service' | t | default: 'Terms of Service' }}</a>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
