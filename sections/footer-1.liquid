  "name": "Footer 1 (Sacred Rebel)",
  "class": "section-footer-1",
  "settings": [
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading",
      "default": "Join the Rebellion"
    },
    {
      "type": "textarea",
      "id": "newsletter_description",
      "label": "Newsletter description",
      "default": "Be the first to know about exclusive drops, sacred stories, and conscious community gatherings."
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Email placeholder",
      "default": "Enter your email"
    },
    {
      "type": "header",
      "content": "Brand"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand name",
      "default": "Sacred Rebel"
    },
    {
      "type": "textarea",
      "id": "brand_tagline",
      "label": "Brand tagline",
      "default": "Wearable prayers for the ones who live boldly, love deeply, and walk in purpose."
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "header",
      "content": "Menus"
    },
    {
      "type": "link_list",
      "id": "shop_menu",
      "label": "Shop menu"
    },
    {
      "type": "link_list",
      "id": "company_menu",
      "label": "Company menu"
    },
    {
      "type": "link_list",
      "id": "support_menu",
      "label": "Support menu"
    },
    {
      "type": "header",
      "content": "Bottom"
    },
    {
      "type": "text",
      "id": "copyright",
      "label": "Copyright text",
      "default": "Sacred Rebel. All rights reserved.",
      "info": "Year is added automatically before this text."
    }
  ]
}
{% endschema %}
