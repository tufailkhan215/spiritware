<div class="feature-icons section page-width" style="padding: 4rem 0;">
  <div class="feature-icons__grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; text-align: center;">
    {% for block in section.blocks %}
      {% if block.type == 'feature' %}
        <div class="feature-icons__item" {{ block.shopify_attributes }}>
          <div class="feature-icons__icon feature-icons__icon--{{ block.settings.icon }}" style="width: 48px; height: 48px; margin: 0 auto 1rem; border-radius: 50%; background: rgba(217, 119, 6, 0.15); display: flex; align-items: center; justify-content: center; font-size: 1.5rem;" aria-hidden="true">
            {% case block.settings.icon %}
              {% when 'truck' %}ğŸšš
              {% when 'shield' %}ğŸ›¡ï¸
              {% when 'return' %}â†©ï¸
              {% when 'headset' %}ğŸ§
              {% when 'leaf' %}ğŸƒ
              {% when 'heart' %}â¤ï¸
              {% when 'star' %}â­
              {% when 'gift' %}ğŸ
              {% when 'clock' %}ğŸ•
              {% when 'check' %}âœ“
              {% else %}â€¢
            {% endcase %}
          </div>
          {% if block.settings.title != blank %}
            <h3 class="feature-icons__title" style="font-size: 1rem; margin: 0 0 0.25rem; text-transform: uppercase; letter-spacing: 0.05em;">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p class="feature-icons__description" style="margin: 0; font-size: 0.9em; color: var(--color-dark-gray);">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Feature icons",
  "class": "section-feature-icons",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "truck", "label": "Truck" },
            { "value": "shield", "label": "Shield" },
            { "value": "return", "label": "Return" },
            { "value": "headset", "label": "Headset" },
            { "value": "leaf", "label": "Leaf" },
            { "value": "heart", "label": "Heart" },
            { "value": "star", "label": "Star" },
            { "value": "gift", "label": "Gift" },
            { "value": "clock", "label": "Clock" },
            { "value": "check", "label": "Check" }
          ],
          "default": "truck"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature icons",
      "blocks": [
        { "type": "feature", "settings": { "title": "Free Shipping", "icon": "truck" } },
        { "type": "feature", "settings": { "title": "Easy Returns", "icon": "return" } },
        { "type": "feature", "settings": { "title": "Support", "icon": "headset" } },
        { "type": "feature", "settings": { "title": "Quality", "icon": "shield" } }
      ]
    }
  ]
}
{% endschema %}
