{% doc %}
  @prompt
    image full with
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-full-width-image-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .ai-full-width-image__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-full-width-image__img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-full-width-image__placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-full-width-image__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-full-width-image__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  {% if block.settings.height_style == 'fixed' %}
    .ai-full-width-image__wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height }}px;
    }

    .ai-full-width-image__img-{{ ai_gen_id }} {
      height: 100%;
      object-fit: cover;
    }

    @media screen and (max-width: 749px) {
      .ai-full-width-image__wrapper-{{ ai_gen_id }} {
        height: {{ block.settings.mobile_image_height }}px;
      }
    }
  {% endif %}
{% endstyle %}

<full-width-image-{{ ai_gen_id }}
  class="ai-full-width-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-full-width-image__wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2400 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-full-width-image__img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-full-width-image__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-full-width-image__empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}
  </div>
</full-width-image-{{ ai_gen_id }}>

<script>
  (function() {
    class FullWidthImage{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('full-width-image-{{ ai_gen_id }}', FullWidthImage{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Full width image",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "height_style",
      "label": "Height style",
      "options": [
        {
          "value": "auto",
          "label": "Auto"
        },
        {
          "value": "fixed",
          "label": "Fixed"
        }
      ],
      "default": "auto"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Desktop height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 500
    },
    {
      "type": "range",
      "id": "mobile_image_height",
      "label": "Mobile height",
      "min": 150,
      "max": 600,
      "step": 50,
      "unit": "px",
      "default": 300
    }
  ],
  "presets": [
    {
      "name": "Full width image"
    }
  ]
}
{% endschema %}
