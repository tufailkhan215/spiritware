{% comment %} Mobile menu for header-preview (Sacred Rebel). Closed by data-close-menu-preview. {% endcomment %}
<div class="header-preview-mobile" id="MobileMenuPreview" role="dialog" aria-modal="true" aria-label="{{ 'general.accessibility.menu' | t }}" hidden>
  <div class="header-preview-mobile__overlay" data-close-menu-preview aria-hidden="true"></div>
  <div class="header-preview-mobile__panel">
    <button type="button" class="header-preview-mobile__close" data-close-menu-preview aria-label="{{ 'general.accessibility.close' | t }}">
      {% render 'icon-close' %}
    </button>
    <nav class="header-preview-mobile__nav">
      {% assign menu_handle = menu | default: '' %}
      {% if menu_handle != '' and linklists[menu_handle].links.size > 0 %}
        <ul class="header-preview-mobile__list">
          {% for link in linklists[menu_handle].links %}
            <li class="header-preview-mobile__item">
              <a href="{{ link.url }}" class="header-preview-mobile__link">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </nav>
  </div>
</div>
