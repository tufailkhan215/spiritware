{% comment %}
  Predictive search: form + results container. JS fetches suggest.json and renders into results container.
{% endcomment %}
<div class="predictive-search" data-predictive-search>
  <form action="{{ routes.search_url }}" method="get" class="predictive-search__form" role="search">
    <label for="PredictiveSearchInput" class="visually-hidden">{{ 'general.search.placeholder' | t }}</label>
    <input
      type="search"
      id="PredictiveSearchInput"
      name="q"
      class="predictive-search__input"
      placeholder="{{ 'general.search.placeholder' | t }}"
      autocomplete="off"
      data-predictive-search-input
    />
    <input type="hidden" name="options[prefix]" value="last" />
    <button type="submit" class="predictive-search__submit" aria-label="{{ 'general.search.submit' | t }}">
      <span aria-hidden="true">&#128269;</span>
    </button>
  </form>
  <div id="PredictiveSearchResults" class="predictive-search__results" data-predictive-search-results hidden></div>
</div>
