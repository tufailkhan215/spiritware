{%- comment -%}
  Minimal meta tags snippet to prevent Liquid errors and provide basic SEO/OpenGraph.
{%- endcomment -%}

<meta name="robots" content="{% if request.page_type == 'password' %}noindex,nofollow{% else %}index,follow{% endif %}">

{%- if page_description -%}
  <meta name="description" content="{{ page_description | escape }}">
{%- endif -%}

{%- assign og_title = page_title | default: shop.name -%}
{%- assign og_description = page_description | default: shop.description -%}
{%- assign og_url = canonical_url -%}

<meta property="og:site_name" content="{{ shop.name | escape }}">
<meta property="og:title" content="{{ og_title | escape }}">
{%- if og_description != blank -%}
  <meta property="og:description" content="{{ og_description | escape }}">
{%- endif -%}
<meta property="og:url" content="{{ og_url }}">
<meta property="og:type" content="{% if request.page_type == 'product' %}product{% else %}website{% endif %}">

{%- if settings.favicon != blank -%}
  <meta property="og:image" content="{{ settings.favicon | image_url: width: 1200, height: 1200 }}">
{%- endif -%}

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
{%- if og_description != blank -%}
  <meta name="twitter:description" content="{{ og_description | escape }}">
{%- endif -%}

